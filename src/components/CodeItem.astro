---
interface Props {
  code: string;
  reward: string;
  expired?: boolean;
  isNew?: boolean;
}

const { code, reward, expired = false, isNew = false } = Astro.props;
---

<div class:list={['code-item', { 'code-item--expired': expired }]}>
  <div class="code-item__info">
    <span class:list={['code-item__code', { 'code-item__code--strike': expired }]}>{code}</span>
    <span class="code-item__reward">
      {reward}
      {isNew && <span class="code-item__new">NUEVO</span>}
    </span>
  </div>
  {expired ? (
    <span class="code-item__btn code-item__btn--expired">EXPIRADO</span>
  ) : (
    <button class="code-item__btn" data-copy={code}>COPIAR</button>
  )}
</div>

<script>
  document.addEventListener('click', async (e) => {
    const btn = (e.target as HTMLElement).closest<HTMLButtonElement>('[data-copy]');
    if (!btn) return;

    try {
      await navigator.clipboard.writeText(btn.dataset.copy!);
      btn.textContent = 'Â¡COPIADO!';
      btn.classList.add('code-item__btn--copied');
      setTimeout(() => {
        btn.textContent = 'COPIAR';
        btn.classList.remove('code-item__btn--copied');
      }, 2000);
    } catch {
      /* clipboard API not available */
    }
  });
</script>

<style>
  .code-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.875rem 1rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-left: 3px solid #22C55E;
    border-radius: 10px;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .code-item:hover {
    border-color: rgba(34, 197, 94, 0.3);
    border-left-color: #22C55E;
    box-shadow: 0 2px 12px rgba(34, 197, 94, 0.08);
  }

  .code-item--expired {
    opacity: 0.55;
    border-left-color: #EF4444;
  }

  .code-item--expired:hover {
    border-color: var(--border);
    border-left-color: #EF4444;
    box-shadow: none;
  }

  .code-item__info {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    min-width: 0;
  }

  .code-item__code {
    font-family: var(--font-mono, var(--font-display));
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--text);
    word-break: break-all;
    letter-spacing: 0.02em;
  }

  .code-item__code--strike {
    text-decoration: line-through;
    text-decoration-color: rgba(239, 68, 68, 0.5);
  }

  .code-item__reward {
    font-size: 0.8rem;
    color: var(--text-dim);
    line-height: 1.4;
  }

  .code-item__btn {
    flex-shrink: 0;
    font-family: var(--font-display);
    font-size: 0.78rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    padding: 0.5rem 1.1rem;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    background: var(--accent, #6366F1);
    color: #fff;
    transition: background 0.2s, transform 0.1s, box-shadow 0.2s;
  }

  .code-item__btn:hover {
    background: #818CF8;
    transform: scale(1.04);
    box-shadow: 0 0 16px rgba(99, 102, 241, 0.25);
  }

  .code-item__btn:active {
    transform: scale(0.97);
  }

  .code-item__btn--copied {
    background: #22C55E;
  }

  .code-item__btn--expired {
    background: #EF4444;
    color: #fff;
    cursor: default;
    pointer-events: none;
    font-size: 0.7rem;
    padding: 0.4rem 0.8rem;
  }

  .code-item__new {
    display: inline-block;
    background: #F59E0B;
    color: #1a1a1a;
    font-family: var(--font-display);
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.04em;
    padding: 2px 7px;
    border-radius: 4px;
    margin-left: 0.4rem;
    vertical-align: middle;
  }

  @media (min-width: 768px) {
    .code-item__code {
      font-size: 1.2rem;
    }
  }
</style>
