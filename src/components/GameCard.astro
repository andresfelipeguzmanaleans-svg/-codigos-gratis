---
interface Props {
  name: string;
  slug: string;
  image: string;
  activeCodes: number;
  lastUpdated: string;
}

const { name, slug, image, activeCodes, lastUpdated } = Astro.props;

const dateLabel = new Date(lastUpdated).toLocaleDateString('es-ES', {
  day: 'numeric',
  month: 'short',
});

const validThumb = image && image.startsWith('https://tr.rbxcdn.com');
---

<a href={`/${slug}/`} class="card">
  <div class="card__img-wrap">
    {validThumb ? (
      <img src={image} alt={name} class="card__img" loading="lazy" />
    ) : (
      <div class="card__placeholder">
        <span class="card__placeholder-text">{name}</span>
      </div>
    )}
  </div>
  <div class="card__body">
    <h2 class="card__name">{name}</h2>
    <div class="card__meta">
      <span class="card__badge">{activeCodes} c√≥digos</span>
      <span class="card__date">Actualizado {dateLabel}</span>
    </div>
  </div>
</a>

<style>
  .card {
    display: block;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: border-color 0.2s, box-shadow 0.2s, transform 0.2s;
  }

  .card:hover {
    border-color: var(--accent);
    box-shadow: 0 0 24px rgba(6, 214, 160, 0.12);
    transform: translateY(-2px);
  }

  .card__img-wrap {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--bg-deep);
  }

  .card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .card:hover .card__img {
    transform: scale(1.05);
  }

  .card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1a2236 0%, #0f3460 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .card__placeholder-text {
    font-family: var(--font-display);
    font-size: 1.05rem;
    font-weight: 700;
    color: #fff;
    text-align: center;
    line-height: 1.2;
    opacity: 0.9;
  }

  .card__body {
    padding: 0.875rem 1rem;
  }

  .card__name {
    font-family: var(--font-display);
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .card__meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .card__badge {
    font-family: var(--font-display);
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--accent);
    background: rgba(6, 214, 160, 0.1);
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
  }

  .card__date {
    font-size: 0.75rem;
    color: var(--text-dim);
  }
</style>
