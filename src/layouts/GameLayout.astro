import Footer from '../components/Footer.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  game: string;
  breadcrumbs: BreadcrumbItem[];
  ogImage?: string;
}

const {
  title,
  description,
  game,
  breadcrumbs,
  ogImage = '/images/og-default.jpg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
const ogImageURL = new URL(ogImage, Astro.site).href;

const fullBreadcrumbs: BreadcrumbItem[] = [
  { label: 'codigosgratis.com', href: '/' },
  { label: 'Games', href: '/games/' },
  { label: game, href: `/games/${game.toLowerCase()}/` },
  ...breadcrumbs,
];

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: fullBreadcrumbs.map((crumb, i) => ({
    '@type': 'ListItem',
    position: i + 1,
    name: crumb.label,
    item: new URL(crumb.href, Astro.site).href,
  })),
};

const gameSlug = game.toLowerCase();
const currentPath = Astro.url.pathname;

function isActive(href: string): boolean {
  if (currentPath === href) return true;
  if (href.startsWith('/games/') && href !== `/games/${gameSlug}/`) {
    return currentPath.startsWith(href);
  }
  return false;
}

// --- Navigation ---
const sidebarSections = [
  {
    label: 'DATA',
    items: [
      { label: 'Fish', href: `/games/${gameSlug}/fish/`, icon: 'fish' },
      { label: 'Rods', href: `/games/${gameSlug}/rods/`, icon: 'rod' },
      { label: 'Locations', href: `/games/${gameSlug}/locations/`, icon: 'map' },
    ],
  },
  {
    label: 'TOOLS',
    items: [
      { label: 'Calculator', href: `/games/${gameSlug}/calculator/`, icon: 'calc' },
      { label: 'Values', href: `/games/${gameSlug}/values/`, icon: 'coins' },
    ],
  },
  {
    label: 'GUIDES',
    items: [
      { label: 'Mutations', href: `/games/${gameSlug}/mutations/`, icon: 'dna' },
      { label: 'Codes', href: `/codigos-${gameSlug}/`, icon: 'gift' },
    ],
  },
];

const mobileTabs = [
  { label: 'Fish', href: `/games/${gameSlug}/fish/`, icon: 'fish' },
  { label: 'Values', href: `/games/${gameSlug}/values/`, icon: 'coins' },
  { label: 'Calc', href: `/games/${gameSlug}/calculator/`, icon: 'calc' },
  { label: 'Rods', href: `/games/${gameSlug}/rods/`, icon: 'rod' },
];

const moreItems = [
  { label: 'Locations', href: `/games/${gameSlug}/locations/`, icon: 'map' },
  { label: 'Mutations', href: `/games/${gameSlug}/mutations/`, icon: 'dna' },
  { label: 'Codes', href: `/codigos-${gameSlug}/`, icon: 'gift' },
];

// SVG icon inner content (24x24 viewBox, stroke-based)
const ico: Record<string, string> = {
  fish: '<path d="M6.5 12c.94-3.46 4.94-6 8.5-6 3.56 0 6.06 2.54 7 6-.94 3.46-3.44 6-7 6-3.56 0-7.56-2.54-8.5-6Z"/><path d="M3 12l3.5-3v6L3 12Z"/><circle cx="16" cy="10" r="1" fill="currentColor" stroke="none"/>',
  rod: '<path d="M3 21l8-8"/><path d="M13 11l5-5"/><path d="M21 3l-3 1 1 3 3-1z"/><path d="M11 13l2-2"/>',
  map: '<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/>',
  calc: '<rect width="16" height="20" x="4" y="2" rx="2"/><path d="M8 6h8"/><path d="M16 10h.01M12 10h.01M8 10h.01M16 14h.01M12 14h.01M8 14h.01M16 18h.01M12 18h.01M8 18h.01"/>',
  coins: '<line x1="12" x2="12" y1="2" y2="22"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>',
  dna: '<path d="M2 15c6.667-6 13.333 0 20-6"/><path d="M9 22c1.798-1.998 2.518-3.995 2.807-5.993"/><path d="M15 2c-1.798 1.998-2.518 3.995-2.807 5.993"/><path d="m17 6-2.5 2.5"/><path d="M14 8.5 15.5 10"/><path d="m7 18 2.5-2.5"/><path d="M3.5 14.5 4 14"/>',
  gift: '<rect x="3" y="8" width="18" height="4" rx="1"/><path d="M12 8v13"/><path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7"/><path d="M7.5 8a2.5 2.5 0 0 1 0-5C10 3 12 8 12 8Z"/><path d="M16.5 8a2.5 2.5 0 0 0 0-5C14 3 12 8 12 8Z"/>',
  play: '<polygon points="5 3 19 12 5 21 5 3"/>',
  wiki: '<path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/><path d="M12 6v7l3-3"/>',
  extLink: '<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/>',
  search: '<circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/>',
  menu: '<line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/>',
  panelLeft: '<rect width="18" height="18" x="3" y="3" rx="2"/><path d="M9 3v18"/>',
  more: '<circle cx="12" cy="12" r="1"/><circle cx="19" cy="12" r="1"/><circle cx="5" cy="12" r="1"/>',
  x: '<path d="M18 6 6 18"/><path d="m6 6 12 12"/>',
  chevron: '<path d="m9 18 6-6-6-6"/>',
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <link rel="alternate" hreflang="en" href={canonicalURL} />
    <link rel="alternate" hreflang="es" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Codigos Gratis" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />

    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Restore sidebar state before paint -->
    <script is:inline>try{if(localStorage.getItem('sb-c')==='1')document.documentElement.classList.add('sidebar-collapsed')}catch(e){}</script>

    <slot name="head" />

    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5467700828296629"
     crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- TOPBAR -->
    <header class="topbar">
      <div class="topbar__inner">
        <button class="topbar__menu-btn" id="menuToggle" type="button" aria-label="Toggle menu">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.menu} />
        </button>

        <a href="/" class="topbar__back" title="Volver a codigosgratis.com">
          <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
          codigosgratis.com
        </a>

        <a href={`/games/${gameSlug}/`} class="topbar__brand">
          <span class="topbar__brand-name">{game}</span>
          <span class="topbar__brand-badge">Guide</span>
        </a>

        <form class="topbar__search" action={`/games/${gameSlug}/fish/`} method="get">
          <svg class="topbar__search-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.search} />
          <input class="topbar__search-input" type="text" name="q" placeholder="Search fish, rods, mutations..." autocomplete="off" />
        </form>
      </div>
    </header>

    <!-- Sidebar overlay (mobile) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- APP SHELL -->
    <div class="app-shell">
      <!-- SIDEBAR -->
      <aside class="sidebar" id="sidebar">
        {gameSlug === 'fisch' && (
          <div class="sidebar__game-hdr">
            <img src="/images/fisch-icon.webp" alt="Fisch" class="sidebar__game-thumb" loading="lazy" />
            <span class="sidebar__game-name">Fisch</span>
            <div class="sidebar__game-stats">
              <span class="sidebar__mini-stat">üêü 1,235</span>
              <span class="sidebar__mini-stat">üß¨ 234</span>
              <span class="sidebar__mini-stat">üé£ 166</span>
              <span class="sidebar__mini-stat">üìç 72</span>
            </div>
          </div>
        )}

        <nav class="sidebar__nav">
          {sidebarSections.map(section => (
            <div class="sidebar__group">
              <span class="sidebar__group-label">{section.label}</span>
              {section.items.map(item => (
                <a
                  href={item.href}
                  class:list={['sidebar__link', { active: isActive(item.href) }]}
                >
                  <svg class="sidebar__link-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico[item.icon]} />
                  <span class="sidebar__link-text">{item.label}</span>
                </a>
              ))}
            </div>
          ))}
        </nav>

        {gameSlug === 'fisch' && (
          <div class="sidebar__links">
            <span class="sidebar__group-label">LINKS</span>
            <a href="https://www.roblox.com/games/16732694052" class="sidebar__link" target="_blank" rel="noopener">
              <svg class="sidebar__link-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.play} />
              <span class="sidebar__link-text">Play on Roblox</span>
            </a>
            <a href="https://fischipedia.org" class="sidebar__link" target="_blank" rel="noopener">
              <svg class="sidebar__link-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.wiki} />
              <span class="sidebar__link-text">Official Wiki</span>
            </a>
            <a href="/codigos-fisch/" class="sidebar__link">
              <svg class="sidebar__link-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.gift} />
              <span class="sidebar__link-text">Active Codes</span>
            </a>
          </div>
        )}

        <button class="sidebar__toggle" id="sidebarToggle" type="button" aria-label="Toggle sidebar width">
          <svg class="sidebar__toggle-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.panelLeft} />
        </button>
      </aside>

      <!-- MAIN AREA -->
      <div class="main-area">
        <nav class="bc" aria-label="Breadcrumb">
          <ol class="bc__list">
            {fullBreadcrumbs.map((crumb, i) => (
              <li class="bc__item">
                {i < fullBreadcrumbs.length - 1 ? (
                  <>
                    <a href={crumb.href} class="bc__link">{crumb.label}</a>
                    <svg class="bc__sep" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" set:html={ico.chevron} />
                  </>
                ) : (
                  <span class="bc__current" aria-current="page">{crumb.label}</span>
                )}
              </li>
            ))}
          </ol>
        </nav>

        <main class="content">
          <slot />
        </main>

        <Footer />
      </div>
    </div>

    <!-- MOBILE BOTTOM TABS -->
    <nav class="mtabs" aria-label="Mobile navigation">
      {mobileTabs.map(tab => (
        <a
          href={tab.href}
          class:list={['mtabs__item', { active: isActive(tab.href) }]}
        >
          <svg class="mtabs__ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico[tab.icon]} />
          <span class="mtabs__label">{tab.label}</span>
        </a>
      ))}
      <button class="mtabs__item" id="moreBtn" type="button">
        <svg class="mtabs__ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.more} />
        <span class="mtabs__label">More</span>
      </button>
    </nav>

    <!-- BOTTOM SHEET -->
    <div class="bsheet" id="bsheet">
      <div class="bsheet__overlay"></div>
      <div class="bsheet__panel">
        <div class="bsheet__header">
          <span class="bsheet__title">More</span>
          <button class="bsheet__close" id="bsheetClose" type="button" aria-label="Close">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico.x} />
          </button>
        </div>
        <nav class="bsheet__nav">
          {moreItems.map(item => (
            <a
              href={item.href}
              class:list={['bsheet__link', { active: isActive(item.href) }]}
            >
              <svg class="bsheet__link-ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" set:html={ico[item.icon]} />
              <span>{item.label}</span>
            </a>
          ))}
        </nav>
      </div>
    </div>

    <!-- Interactions -->
    <script is:inline>
      (function(){
        var sb=document.getElementById('sidebarToggle');
        var mb=document.getElementById('menuToggle');
        var ov=document.getElementById('sidebarOverlay');
        var mo=document.getElementById('moreBtn');
        var bs=document.getElementById('bsheet');
        var bc=document.getElementById('bsheetClose');

        if(sb)sb.onclick=function(){
          document.documentElement.classList.toggle('sidebar-collapsed');
          try{localStorage.setItem('sb-c',document.documentElement.classList.contains('sidebar-collapsed')?'1':'0')}catch(e){}
        };
        if(mb)mb.onclick=function(){document.body.classList.toggle('menu-open')};
        if(ov)ov.onclick=function(){document.body.classList.remove('menu-open')};

        document.querySelectorAll('.sidebar__link').forEach(function(l){
          l.addEventListener('click',function(){document.body.classList.remove('menu-open')});
        });

        if(mo)mo.onclick=function(){bs&&bs.classList.add('open')};
        if(bs){
          var ol=bs.querySelector('.bsheet__overlay');
          if(ol)ol.onclick=function(){bs.classList.remove('open')};
        }
        if(bc)bc.onclick=function(){bs&&bs.classList.remove('open')};
      })();
    </script>

    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --bg-deep: #060B18;
    --bg-card: #0F1D35;
    --bg-elevated: #142847;
    --bg-code: #0A1628;
    --accent: #1DA2D8;
    --accent-secondary: #22D3EE;
    --accent-hot: #F97316;
    --accent-warn: #EAB308;
    --accent-success: #22C55E;
    --text: #E2E8F0;
    --text-dim: #94A3B8;
    --border: rgba(255, 255, 255, 0.08);
    --font-body: 'Inter', system-ui, sans-serif;
    --font-display: 'Inter', system-ui, sans-serif;
    --font-mono: 'JetBrains Mono', ui-monospace, monospace;
    --topbar-h: 56px;
    --sidebar-w: 240px;
    --sidebar-w-sm: 64px;
    --mtabs-h: 60px;
    --radius: 8px;
    --radius-sm: 6px;
    --radius-pill: 9999px;
  }

  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  body {
    overflow-x: hidden;
    font-family: var(--font-body);
    font-weight: 400;
    background: var(--bg-deep);
    color: var(--text);
    line-height: 1.6;
    min-height: 100dvh;
    -webkit-font-smoothing: antialiased;
  }

  img {
    display: block;
    max-width: 100%;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .container {
    width: 100%;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }
  }
</style>

<style>
  /* ==========================================================================
     TOPBAR
     ========================================================================== */

  .topbar {
    position: sticky;
    top: 0;
    z-index: 100;
    height: var(--topbar-h);
    background: rgba(6, 11, 24, 0.88);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }

  .topbar__inner {
    max-width: 1280px;
    margin: 0 auto;
    height: 100%;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0 1rem;
  }

  .topbar__menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    color: var(--text-dim);
    cursor: pointer;
    border-radius: var(--radius);
    transition: color 0.2s, background 0.2s;
  }

  .topbar__menu-btn:hover {
    color: var(--text);
    background: rgba(255, 255, 255, 0.05);
  }

  .topbar__menu-btn :global(svg) {
    width: 20px;
    height: 20px;
  }

  @media (min-width: 768px) {
    .topbar__menu-btn {
      display: none;
    }
  }

  .topbar__brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .topbar__brand-name {
    font-weight: 700;
    font-size: 1.125rem;
    color: #fff;
  }

  .topbar__back {
    display: none;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--text-dim);
    transition: color 0.2s;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .topbar__back:hover {
    color: #22D3EE;
  }

  @media (min-width: 768px) {
    .topbar__back {
      display: flex;
    }
  }

  .topbar__brand-badge {
    font-size: 0.625rem;
    font-weight: 600;
    color: var(--accent);
    background: rgba(29, 162, 216, 0.12);
    padding: 2px 8px;
    border-radius: var(--radius-pill);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .topbar__search {
    flex: 1;
    max-width: 400px;
    position: relative;
    display: flex;
    align-items: center;
    margin-left: auto;
  }

  .topbar__search-ico {
    position: absolute;
    left: 0.75rem;
    width: 16px;
    height: 16px;
    color: var(--text-dim);
    pointer-events: none;
  }

  .topbar__search-input {
    width: 100%;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 0.45rem 0.75rem 0.45rem 2.25rem;
    color: var(--text);
    font-family: var(--font-body);
    font-size: 0.85rem;
    outline: none;
    transition: border-color 0.2s, background 0.2s, box-shadow 0.2s;
  }

  .topbar__search-input:focus {
    border-color: var(--accent);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 3px rgba(29, 162, 216, 0.1);
  }

  .topbar__search-input::placeholder {
    color: var(--text-dim);
  }

  @media (max-width: 479px) {
    .topbar__search {
      display: none;
    }
  }

  /* ==========================================================================
     SIDEBAR OVERLAY (mobile)
     ========================================================================== */

  .sidebar-overlay {
    display: none;
    position: fixed;
    inset: 0;
    top: var(--topbar-h);
    background: rgba(0, 0, 0, 0.6);
    z-index: 89;
  }

  :global(body.menu-open) .sidebar-overlay {
    display: block;
  }

  /* ==========================================================================
     APP SHELL
     ========================================================================== */

  .app-shell {
    display: flex;
    max-width: 1280px;
    margin: 0 auto;
    min-height: calc(100dvh - var(--topbar-h));
  }

  /* ==========================================================================
     SIDEBAR
     ========================================================================== */

  .sidebar {
    display: none;
  }

  @media (min-width: 768px) {
    .sidebar {
      display: flex;
      flex-direction: column;
      width: var(--sidebar-w);
      flex-shrink: 0;
      position: sticky;
      top: var(--topbar-h);
      height: calc(100dvh - var(--topbar-h));
      overflow-y: auto;
      border-right: 1px solid var(--border);
      padding: 1rem 0.75rem;
      transition: width 0.2s ease;
      scrollbar-width: thin;
      scrollbar-color: rgba(255, 255, 255, 0.06) transparent;
    }

    :global(html.sidebar-collapsed) .sidebar {
      width: var(--sidebar-w-sm);
      padding: 1rem 0.5rem;
    }
  }

  /* Mobile sidebar */
  @media (max-width: 767px) {
    :global(body.menu-open) .sidebar {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: var(--topbar-h);
      left: 0;
      bottom: 0;
      width: 280px;
      z-index: 90;
      background: var(--bg-deep);
      border-right: 1px solid var(--border);
      padding: 1rem 0.75rem;
      animation: slideIn 0.2s ease;
    }
  }

  @keyframes slideIn {
    from { transform: translateX(-100%); }
    to { transform: translateX(0); }
  }

  /* Sidebar game header */
  .sidebar__game-hdr {
    display: flex;
    flex-direction: column;
    align-items: center;
