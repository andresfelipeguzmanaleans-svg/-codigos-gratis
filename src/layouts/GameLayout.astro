---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  title: string;
  description: string;
  game: string;
  breadcrumbs: BreadcrumbItem[];
  ogImage?: string;
}

const {
  title,
  description,
  game,
  breadcrumbs,
  ogImage = '/images/og-default.jpg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).href;
const ogImageURL = new URL(ogImage, Astro.site).href;

// Build full breadcrumb chain: Home > Games > {game} > ...page breadcrumbs
const fullBreadcrumbs: BreadcrumbItem[] = [
  { label: 'Home', href: '/' },
  { label: 'Games', href: '/games/' },
  { label: game, href: `/games/${game.toLowerCase()}/` },
  ...breadcrumbs,
];

// Schema.org BreadcrumbList
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: fullBreadcrumbs.map((crumb, i) => ({
    '@type': 'ListItem',
    position: i + 1,
    name: crumb.label,
    item: new URL(crumb.href, Astro.site).href,
  })),
};

// Game sub-navigation
const gameSlug = game.toLowerCase();
const gameNav = [
  { label: 'Fish',      href: `/games/${gameSlug}/` },
  { label: 'Values',    href: `/games/${gameSlug}/values/` },
  { label: 'Calculator',href: `/games/${gameSlug}/calculator/` },
  { label: 'Mutations', href: `/games/${gameSlug}/mutations/` },
  { label: 'Rods',      href: `/games/${gameSlug}/rods/` },
  { label: 'Codes',     href: `/${gameSlug}-codes/` },
];

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Bilingual meta -->
    <link rel="alternate" hreflang="en" href={canonicalURL} />
    <link rel="alternate" hreflang="es" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Codigos Gratis" />
    <meta property="og:locale" content="en_US" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Schema.org Breadcrumbs -->
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Montserrat:wght@900&family=Oxanium:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <slot name="head" />

    <!-- AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5467700828296629"
     crossorigin="anonymous"></script>
  </head>
  <body>
    <Header />

    <!-- Game sub-navigation -->
    <nav class="game-nav" aria-label="Game navigation">
      <div class="container">
        <div class="game-nav__inner">
          {gameNav.map(item => (
            <a
              href={item.href}
              class:list={['game-nav__link', { 'game-nav__link--active': currentPath === item.href }]}
            >
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </nav>

    <!-- Breadcrumbs -->
    <nav class="breadcrumbs" aria-label="Breadcrumb">
      <div class="container">
        <ol class="breadcrumbs__list">
          {fullBreadcrumbs.map((crumb, i) => (
            <li class="breadcrumbs__item">
              {i < fullBreadcrumbs.length - 1 ? (
                <>
                  <a href={crumb.href} class="breadcrumbs__link">{crumb.label}</a>
                  <span class="breadcrumbs__sep" aria-hidden="true">/</span>
                </>
              ) : (
                <span class="breadcrumbs__current" aria-current="page">{crumb.label}</span>
              )}
            </li>
          ))}
        </ol>
      </div>
    </nav>

    <main class="game-main">
      <slot />
    </main>

    <Footer />

    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --bg-deep: #0a0e1a;
    --bg-card: #111827;
    --bg-code: #0d1520;
    --accent: #06d6a0;
    --accent-hot: #ff6b6b;
    --accent-warn: #ffd166;
    --text: #e8eaf0;
    --text-dim: #8892a4;
    --border: #1e293b;
    --font-display: 'Oxanium', cursive;
    --font-body: 'DM Sans', sans-serif;
  }

  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }

  body {
    overflow-x: hidden;
    font-family: var(--font-body);
    background: var(--bg-deep);
    color: var(--text);
    line-height: 1.6;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
    -webkit-font-smoothing: antialiased;
  }

  img {
    display: block;
    max-width: 100%;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }
  }
</style>

<style>
  /* ============================================================
     GAME SUB-NAVIGATION
     ============================================================ */

  .game-nav {
    background: rgba(17, 24, 39, 0.6);
    border-bottom: 1px solid var(--border);
  }

  .game-nav__inner {
    display: flex;
    gap: 0.25rem;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 0.5rem 0;
  }

  .game-nav__inner::-webkit-scrollbar {
    display: none;
  }

  .game-nav__link {
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-dim);
    padding: 0.4rem 0.85rem;
    border-radius: 8px;
    white-space: nowrap;
    transition: color 0.2s, background 0.2s;
  }

  .game-nav__link:hover {
    color: var(--text);
    background: rgba(255, 255, 255, 0.05);
  }

  .game-nav__link--active {
    color: var(--accent);
    background: rgba(6, 214, 160, 0.1);
  }

  /* ============================================================
     BREADCRUMBS
     ============================================================ */

  .breadcrumbs {
    padding: 0.75rem 0 0;
  }

  .breadcrumbs__list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0;
    list-style: none;
  }

  .breadcrumbs__item {
    display: flex;
    align-items: center;
    font-size: 0.8rem;
  }

  .breadcrumbs__link {
    color: var(--text-dim);
    transition: color 0.2s;
  }

  .breadcrumbs__link:hover {
    color: var(--accent);
  }

  .breadcrumbs__sep {
    margin: 0 0.4rem;
    color: var(--text-dim);
    opacity: 0.5;
  }

  .breadcrumbs__current {
    color: var(--text);
    font-weight: 500;
  }

  /* ============================================================
     GAME MAIN CONTENT
     ============================================================ */

  .game-main {
    flex: 1;
    padding: 1rem 0 2rem;
  }

  @media (min-width: 768px) {
    .game-main {
      padding: 1.5rem 0 3rem;
    }
  }
</style>
