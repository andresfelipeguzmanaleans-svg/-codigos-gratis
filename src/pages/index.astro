import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import GameCard from '../components/GameCard.astro';
import Footer from '../components/Footer.astro';

interface GameData {
  name: string;
  slug: string;
  thumbnail: string;
  lastUpdated: string;
  activeCodes: { code: string; reward: string }[];
  expiredCodes: { code: string; reward: string }[];
  totalVisits?: number;
  genre?: string;
}

const gameModules = import.meta.glob<GameData>('../../data/games/*.json', {
  eager: true,
  import: 'default',
});

const allGames = Object.values(gameModules);

// Stats
const totalGames = allGames.length;
const totalCodes = allGames.reduce((sum, g) => sum + g.activeCodes.length, 0);

// Recent 12 for slider
const recentGames = [...allGames]
  .sort((a, b) => new Date(b.lastUpdated).getTime() - new Date(a.lastUpdated).getTime())
  .slice(0, 12);

const recentSlugs = new Set(recentGames.map(g => g.slug));

// Popular 8 (excluding recent to avoid duplication)
const popularGames = [...allGames]
  .filter((g) => g.totalVisits && g.totalVisits > 0 && !recentSlugs.has(g.slug))
  .sort((a, b) => (b.totalVisits || 0) - (a.totalVisits || 0))
  .slice(0, 8);

// All games sorted by lastUpdated
const sortedGames = [...allGames]
  .sort((a, b) => new Date(b.lastUpdated).getTime() - new Date(a.lastUpdated).getTime());

// Categories
const categories = ['Fighting', 'Simulator', 'Tycoon', 'RPG', 'Racing', 'Tower Defense', 'Adventure', 'Sports'];

const gamesByCategory: Record<string, { name: string; slug: string; thumbnail: string; activeCodes: number; lastUpdated: string }[]> = {};
for (const cat of categories) {
  gamesByCategory[cat] = allGames
    .filter((g) => g.genre && g.genre.toLowerCase().includes(cat.toLowerCase()))
    .map((g) => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length, lastUpdated: g.lastUpdated }));
}

// Top games with valid thumbnails for hero
const topWithThumb = [...allGames]
  .filter((g) => g.totalVisits && g.totalVisits > 0 && g.thumbnail && g.thumbnail.startsWith('https://tr.rbxcdn.com'))
  .sort((a, b) => (b.totalVisits || 0) - (a.totalVisits || 0));

// 80 for dense rotated mosaic (10 cols √ó 8 rows)
const mosaicTop = topWithThumb.slice(0, 66);
const mosaicGames: { thumbnail: string; name: string }[] = [];
while (mosaicGames.length < 80 && mosaicTop.length > 0) {
  for (const g of mosaicTop) {
    if (mosaicGames.length >= 80) break;
    mosaicGames.push({ thumbnail: g.thumbnail, name: g.name });
  }
}
const centerIndex = 34; // center of 10√ó8 grid (row 4, col 5)

// Month label for stats
const monthLabel = new Date().toLocaleDateString('es-ES', { month: 'long', year: 'numeric' });
const monthCapital = monthLabel.charAt(0).toUpperCase() + monthLabel.slice(1);

// Search data for JS
const searchData = sortedGames.map((g) => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length }));
