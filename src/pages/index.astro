<script define:vars={{ searchData, allGamesData }}>
  // ---- Helpers ----
  function getValidThumb(thumb) {
    return thumb && thumb.startsWith('https://tr.rbxcdn.com') ? thumb : null;
  }

  function escapeHtml(str) {
    return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
  }

  function createCardHTML(g) {
    const thumb = getValidThumb(g.thumbnail);
    const name = escapeHtml(g.name);
    const imgHtml = thumb
      ? `<img src="${thumb}" alt="${name}" class="game-card__img" loading="lazy" />`
      : `<div class="game-card__img game-card__img--placeholder"><span>${name.charAt(0)}</span></div>`;
    const codesClass = g.activeCodes === 0 ? 'game-card__codes game-card__codes--zero' : 'game-card__codes';
    const genreHtml = g.genre ? `<span class="game-card__genre">${escapeHtml(g.genre)}</span>` : '';
    return `<a href="/${g.slug}/" class="game-card">${imgHtml}<div class="game-card__info"><h3 class="game-card__name">${name}</h3><div class="game-card__meta"><span class="${codesClass}">${g.activeCodes} c√≥digos</span>${genreHtml}</div></div></a>`;
  }

  // ---- State ----
  let currentGenre = 'all';
  let currentSort = 'latest';
  let filteredGames = [...allGamesData];
  let shown = Math.min(60, filteredGames.length);
  const BATCH = 60;

  const grid = document.getElementById('games-grid');
  const loadMoreBtn = document.getElementById('load-more');
  const shownCount = document.getElementById('shown-count');
  const totalCount = document.getElementById('total-count');

  // ---- Filter + Sort Logic ----
  function getFilteredSorted() {
    let games = currentGenre === 'all'
      ? [...allGamesData]
      : allGamesData.filter(g => g.genre === currentGenre);

    switch (currentSort) {
      case 'latest':
        games.sort((a, b) => new Date(b.lastUpdated).getTime() - new Date(a.lastUpdated).getTime());
        break;
      case 'most-codes':
        games.sort((a, b) => b.activeCodes - a.activeCodes);
        break;
      case 'least-codes':
        games.sort((a, b) => a.activeCodes - b.activeCodes);
        break;
      case 'name-az':
        games.sort((a, b) => a.name.localeCompare(b.name));
        break;
      case 'name-za':
        games.sort((a, b) => b.name.localeCompare(a.name));
        break;
      case 'most-popular':
        games.sort((a, b) => b.totalVisits - a.totalVisits);
        break;
    }

    return games;
  }

  function renderGrid() {
    filteredGames = getFilteredSorted();
    shown = Math.min(BATCH, filteredGames.length);
    grid.innerHTML = filteredGames.slice(0, shown).map(createCardHTML).join('');
    updateCounter();
  }

  function updateCounter() {
    shownCount.textContent = shown;
    totalCount.textContent = filteredGames.length;
    if (loadMoreBtn) {
      loadMoreBtn.style.display = shown >= filteredGames.length ? 'none' : '';
    }
  }

  // ---- Genre Pills ----
  document.getElementById('genre-pills').addEventListener('click', (e) => {
    const pill = e.target.closest('.pill');
    if (!pill) return;
    document.querySelectorAll('.pill').forEach(p => p.classList.remove('pill--active'));
    pill.classList.add('pill--active');
    currentGenre = pill.dataset.genre;
    renderGrid();
  });

  // ---- Sort ----
  document.getElementById('sort-select').addEventListener('change', (e) => {
    currentSort = e.target.value;
    renderGrid();
  });

  // ---- Load More ----
  if (loadMoreBtn) {
    loadMoreBtn.addEventListener('click', () => {
      const next = filteredGames.slice(shown, shown + BATCH);
      grid.insertAdjacentHTML('beforeend', next.map(createCardHTML).join(''));
      shown += next.length;
      updateCounter();
    });
  }

  // ---- Search ----
  const searchInput = document.getElementById('hero-search');
  const searchResults = document.getElementById('search-results');

  searchInput.addEventListener('input', () => {
    const q = searchInput.value.trim().toLowerCase();
    if (q.length < 2) {
      searchResults.style.display = 'none';
      searchResults.innerHTML = '';
      return;
    }

    const matches = searchData
      .filter(g => g.name.toLowerCase().includes(q))
      .slice(0, 6);

    if (matches.length === 0) {
      searchResults.style.display = 'block';
      searchResults.innerHTML = '<div class="sr-empty">No se encontraron juegos</div>';
      return;
    }

    searchResults.style.display = 'block';
    searchResults.innerHTML = matches.map(g => {
      const thumb = getValidThumb(g.thumbnail);
      const name = escapeHtml(g.name);
      const imgHtml = thumb
        ? `<img src="${thumb}" alt="" class="sr-item__img" />`
        : `<div class="sr-item__placeholder"></div>`;
      return `<a href="/${g.slug}/" class="sr-item">${imgHtml}<div class="sr-item__info"><span class="sr-item__name">${name}</span><span class="sr-item__codes">${g.activeCodes} c√≥digos</span></div></a>`;
    }).join('');
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.search-wrap')) {
      searchResults.style.display = 'none';
    }
  });
</script>

