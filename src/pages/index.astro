<script define:vars={{ searchData, gamesByCategory, sortedGamesData: sortedGames.map(g => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length, lastUpdated: g.lastUpdated })) }}>
  // ---- Search ----
  const searchInput = document.getElementById('hero-search');
  const searchResults = document.getElementById('search-results');

  function getValidThumb(thumb) {
    return thumb && thumb.startsWith('https://tr.rbxcdn.com') ? thumb : null;
  }

  searchInput.addEventListener('input', () => {
    const q = searchInput.value.trim().toLowerCase();
    if (q.length < 2) {
      searchResults.style.display = 'none';
      searchResults.innerHTML = '';
      return;
    }

    const matches = searchData
      .filter(g => g.name.toLowerCase().includes(q))
      .slice(0, 6);

    if (matches.length === 0) {
      searchResults.style.display = 'block';
      searchResults.innerHTML = '<div class="sr-empty">No se encontraron juegos</div>';
      return;
    }

    searchResults.style.display = 'block';
    searchResults.innerHTML = matches.map(g => {
      const thumb = getValidThumb(g.thumbnail);
      const imgHtml = thumb
        ? `<img src="${thumb}" alt="" class="sr-item__img" />`
        : `<div class="sr-item__placeholder"></div>`;
      return `<a href="/${g.slug}/" class="sr-item">${imgHtml}<div class="sr-item__info"><span class="sr-item__name">${g.name}</span><span class="sr-item__codes">${g.activeCodes} c√≥digos</span></div></a>`;
    }).join('');
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.search-wrap')) {
      searchResults.style.display = 'none';
    }
  });

  // ---- Categories ----
  const catButtons = document.querySelectorAll('.cat-pill');
  const categoryGrid = document.getElementById('category-grid');
  let activeCategory = null;

  function createCardHTML(g) {
    const thumb = getValidThumb(g.thumbnail);
    const date = new Date(g.lastUpdated).toLocaleDateString('es-ES', { day: 'numeric', month: 'short' });
    const imgHtml = thumb
      ? `<img src="${thumb}" alt="${g.name}" class="card__img" loading="lazy" />`
      : `<div class="card__placeholder"><span class="card__placeholder-text">${g.name}</span></div>`;
    return `<a href="/${g.slug}/" class="card"><div class="card__img-wrap">${imgHtml}</div><div class="card__body"><h2 class="card__name">${g.name}</h2><div class="card__meta"><span class="card__badge">${g.activeCodes} c√≥digos</span><span class="card__date">Actualizado ${date}</span></div></div></a>`;
  }

  catButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const cat = btn.dataset.category;

      if (activeCategory === cat) {
        btn.classList.remove('cat-pill--active');
        categoryGrid.style.display = 'none';
        categoryGrid.innerHTML = '';
        activeCategory = null;
        return;
      }

      catButtons.forEach(b => b.classList.remove('cat-pill--active'));
      btn.classList.add('cat-pill--active');
      activeCategory = cat;

      const games = gamesByCategory[cat] || [];
      if (games.length === 0) {
        categoryGrid.style.display = 'block';
        categoryGrid.innerHTML = '<p class="empty-cat">No hay juegos en esta categor√≠a</p>';
        return;
      }

      categoryGrid.style.display = 'grid';
      categoryGrid.innerHTML = games.map(createCardHTML).join('');
    });
  });

  // ---- Slider (Actualizados recientemente) ----
  const sliderTrack = document.getElementById('slider-track');
  const sliderLeft = document.getElementById('slider-left');
  const sliderRight = document.getElementById('slider-right');
  const sliderDots = document.getElementById('slider-dots');

  if (sliderTrack && sliderLeft && sliderRight && sliderDots) {
    const cards = sliderTrack.querySelectorAll('.slider-card');
    const totalCards = cards.length;

    // Calculate visible cards based on viewport
    function getVisibleCount() {
      if (window.innerWidth >= 1024) return 4;
      return 2;
    }

    // Build dots
    function buildDots() {
      const visible = getVisibleCount();
      const pages = Math.ceil(totalCards / visible);
      sliderDots.innerHTML = '';
      for (let i = 0; i < pages; i++) {
        const dot = document.createElement('button');
        dot.className = 'slider-dot' + (i === 0 ? ' slider-dot--active' : '');
        dot.setAttribute('aria-label', 'P√°gina ' + (i + 1));
        dot.dataset.page = i;
        sliderDots.appendChild(dot);
      }
    }
    buildDots();
    window.addEventListener('resize', buildDots);

    function getGap() {
      if (window.innerWidth >= 1024) return 16;
      if (window.innerWidth >= 640) return 12;
      return 10;
    }

    function updateDots() {
      const visible = getVisibleCount();
      const cardW = cards[0].offsetWidth + getGap();
      const page = Math.round(sliderTrack.scrollLeft / (cardW * visible));
      sliderDots.querySelectorAll('.slider-dot').forEach(function(d, i) {
        d.classList.toggle('slider-dot--active', i === page);
      });
    }

    function scrollByCards(dir) {
      const visible = getVisibleCount();
      const cardW = cards[0].offsetWidth + getGap();
      sliderTrack.scrollBy({ left: dir * cardW * visible, behavior: 'smooth' });
    }

    sliderLeft.addEventListener('click', function() { scrollByCards(-1); });
    sliderRight.addEventListener('click', function() { scrollByCards(1); });

    sliderTrack.addEventListener('scroll', function() {
      requestAnimationFrame(updateDots);
    });

    sliderDots.addEventListener('click', function(e) {
      var dot = e.target.closest('.slider-dot');
      if (!dot) return;
      var page = parseInt(dot.dataset.page);
      var visible = getVisibleCount();
      var cardW = cards[0].offsetWidth + getGap();
      sliderTrack.scrollTo({ left: page * cardW * visible, behavior: 'smooth' });
    });

    // Auto-scroll every 5s, pause on hover
    var autoInterval;
    function startAuto() {
      autoInterval = setInterval(function() {
        var maxScroll = sliderTrack.scrollWidth - sliderTrack.clientWidth;
        if (sliderTrack.scrollLeft >= maxScroll - 10) {
          sliderTrack.scrollTo({ left: 0, behavior: 'smooth' });
        } else {
          scrollByCards(1);
        }
      }, 5000);
    }
    startAuto();

    sliderTrack.addEventListener('mouseenter', function() { clearInterval(autoInterval); });
    sliderTrack.addEventListener('mouseleave', function() { startAuto(); });
  }

  // ---- Load More ----
  const allGamesGrid = document.getElementById('all-games-grid');
  const loadMoreBtn = document.getElementById('load-more');
  let shown = 20;
  const BATCH = 20;

  if (loadMoreBtn) {
    loadMoreBtn.addEventListener('click', () => {
      const next = sortedGamesData.slice(shown, shown + BATCH);
      next.forEach(g => {
        allGamesGrid.insertAdjacentHTML('beforeend', createCardHTML(g));
      });
      shown += next.length;
      if (shown >= sortedGamesData.length) {
        loadMoreBtn.style.display = 'none';
      }
    });
  }
</script>

