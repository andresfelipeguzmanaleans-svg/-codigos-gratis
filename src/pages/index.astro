---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import GameCard from '../components/GameCard.astro';
import Footer from '../components/Footer.astro';

interface GameData {
  name: string;
  slug: string;
  thumbnail: string;
  lastUpdated: string;
  activeCodes: { code: string; reward: string }[];
  expiredCodes: { code: string; reward: string }[];
  totalVisits?: number;
  genre?: string;
}

const gameModules = import.meta.glob<GameData>('../../data/games/*.json', {
  eager: true,
  import: 'default',
});

const allGames = Object.values(gameModules);

// Stats
const totalGames = allGames.length;
const totalCodes = allGames.reduce((sum, g) => sum + g.activeCodes.length, 0);

// Recent 8
const recentGames = [...allGames]
  .sort((a, b) => new Date(b.lastUpdated).getTime() - new Date(a.lastUpdated).getTime())
  .slice(0, 8);

// Popular 8
const popularGames = [...allGames]
  .filter((g) => g.totalVisits && g.totalVisits > 0)
  .sort((a, b) => (b.totalVisits || 0) - (a.totalVisits || 0))
  .slice(0, 8);

// All games sorted by lastUpdated for the full grid
const sortedGames = [...allGames]
  .sort((a, b) => new Date(b.lastUpdated).getTime() - new Date(a.lastUpdated).getTime());

// Categories
const categories = ['Fighting', 'Simulator', 'Tycoon', 'RPG', 'Racing', 'Tower Defense', 'Adventure', 'Sports'];

// Games by category (for JS hydration)
const gamesByCategory: Record<string, { name: string; slug: string; thumbnail: string; activeCodes: number; lastUpdated: string }[]> = {};
for (const cat of categories) {
  gamesByCategory[cat] = allGames
    .filter((g) => g.genre && g.genre.toLowerCase().includes(cat.toLowerCase()))
    .map((g) => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length, lastUpdated: g.lastUpdated }));
}

// Search data for JS
const searchData = sortedGames.map((g) => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length }));
---

<Layout title="Códigos Gratis para Roblox — Actualizados hoy">
  <Header />

  <main class="main">
    <!-- Hero -->
    <section class="hero">
      <div class="container hero__inner">
        <h1 class="hero__title">Códigos Gratis para Roblox y Más</h1>
        <p class="hero__sub">Encuentra códigos actualizados para tus juegos favoritos</p>
        <div class="search-wrap">
          <div class="search">
            <svg class="search__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8" /><path d="m21 21-4.3-4.3" />
            </svg>
            <input
              type="text"
              id="hero-search"
              class="search__input"
              placeholder="Busca tu juego... (ej: Blox Fruits, Jailbreak)"
              autocomplete="off"
            />
          </div>
          <div id="search-results" class="search-results"></div>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <div class="container">
      <div class="stats">
        <div class="stats__item">
          <span class="stats__value">{totalGames}</span>
          <span class="stats__label">Juegos</span>
        </div>
        <div class="stats__item">
          <span class="stats__value">{totalCodes}</span>
          <span class="stats__label">Códigos activos</span>
        </div>
        <div class="stats__item">
          <svg class="stats__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48 2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48 2.83-2.83" />
          </svg>
          <span class="stats__label">Actualizado hoy</span>
        </div>
      </div>
    </div>

    <!-- Actualizados recientemente -->
    <section class="section container">
      <h2 class="section__title">Actualizados recientemente</h2>
      <div class="games-grid">
        {recentGames.map((game) => (
          <GameCard
            name={game.name}
            slug={game.slug}
            image={game.thumbnail}
            activeCodes={game.activeCodes.length}
            lastUpdated={game.lastUpdated}
          />
        ))}
      </div>
    </section>

    <!-- Juegos más populares -->
    {popularGames.length > 0 && (
      <section class="section container">
        <h2 class="section__title">Juegos más populares</h2>
        <div class="games-grid">
          {popularGames.map((game) => (
            <GameCard
              name={game.name}
              slug={game.slug}
              image={game.thumbnail}
              activeCodes={game.activeCodes.length}
              lastUpdated={game.lastUpdated}
            />
          ))}
        </div>
      </section>
    )}

    <!-- Buscar por categoría -->
    <section class="section container">
      <h2 class="section__title">Buscar por categoría</h2>
      <div class="categories" id="categories">
        {categories.map((cat) => (
          <button class="cat-pill" data-category={cat}>{cat}</button>
        ))}
      </div>
      <div id="category-grid" class="games-grid category-grid" style="display:none;"></div>
    </section>

    <!-- Todos los juegos -->
    <section class="section container">
      <h2 class="section__title">Todos los juegos</h2>
      <div class="games-grid" id="all-games-grid">
        {sortedGames.slice(0, 20).map((game) => (
          <GameCard
            name={game.name}
            slug={game.slug}
            image={game.thumbnail}
            activeCodes={game.activeCodes.length}
            lastUpdated={game.lastUpdated}
          />
        ))}
      </div>
      {sortedGames.length > 20 && (
        <div class="load-more-wrap">
          <button id="load-more" class="load-more-btn">Cargar más juegos</button>
        </div>
      )}
    </section>
  </main>

  <Footer />
</Layout>

<script define:vars={{ searchData, gamesByCategory, sortedGamesData: sortedGames.map(g => ({ name: g.name, slug: g.slug, thumbnail: g.thumbnail, activeCodes: g.activeCodes.length, lastUpdated: g.lastUpdated })) }}>
  // ---- Search ----
  const searchInput = document.getElementById('hero-search');
  const searchResults = document.getElementById('search-results');

  function getValidThumb(thumb) {
    return thumb && thumb.startsWith('https://tr.rbxcdn.com') ? thumb : null;
  }

  searchInput.addEventListener('input', () => {
    const q = searchInput.value.trim().toLowerCase();
    if (q.length < 2) {
      searchResults.style.display = 'none';
      searchResults.innerHTML = '';
      return;
    }

    const matches = searchData
      .filter(g => g.name.toLowerCase().includes(q))
      .slice(0, 6);

    if (matches.length === 0) {
      searchResults.style.display = 'block';
      searchResults.innerHTML = '<div class="sr-empty">No se encontraron juegos</div>';
      return;
    }

    searchResults.style.display = 'block';
    searchResults.innerHTML = matches.map(g => {
      const thumb = getValidThumb(g.thumbnail);
      const imgHtml = thumb
        ? `<img src="${thumb}" alt="" class="sr-item__img" />`
        : `<div class="sr-item__placeholder"></div>`;
      return `<a href="/${g.slug}/" class="sr-item">${imgHtml}<div class="sr-item__info"><span class="sr-item__name">${g.name}</span><span class="sr-item__codes">${g.activeCodes} códigos</span></div></a>`;
    }).join('');
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.search-wrap')) {
      searchResults.style.display = 'none';
    }
  });

  // ---- Categories ----
  const catButtons = document.querySelectorAll('.cat-pill');
  const categoryGrid = document.getElementById('category-grid');
  let activeCategory = null;

  function createCardHTML(g) {
    const thumb = getValidThumb(g.thumbnail);
    const date = new Date(g.lastUpdated).toLocaleDateString('es-ES', { day: 'numeric', month: 'short' });
    const imgHtml = thumb
      ? `<img src="${thumb}" alt="${g.name}" class="card__img" loading="lazy" />`
      : `<div class="card__placeholder"><span class="card__placeholder-text">${g.name}</span></div>`;
    return `<a href="/${g.slug}/" class="card"><div class="card__img-wrap">${imgHtml}</div><div class="card__body"><h2 class="card__name">${g.name}</h2><div class="card__meta"><span class="card__badge">${g.activeCodes} códigos</span><span class="card__date">Actualizado ${date}</span></div></div></a>`;
  }

  catButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const cat = btn.dataset.category;

      if (activeCategory === cat) {
        btn.classList.remove('cat-pill--active');
        categoryGrid.style.display = 'none';
        categoryGrid.innerHTML = '';
        activeCategory = null;
        return;
      }

      catButtons.forEach(b => b.classList.remove('cat-pill--active'));
      btn.classList.add('cat-pill--active');
      activeCategory = cat;

      const games = gamesByCategory[cat] || [];
      if (games.length === 0) {
        categoryGrid.style.display = 'block';
        categoryGrid.innerHTML = '<p class="empty-cat">No hay juegos en esta categoría</p>';
        return;
      }

      categoryGrid.style.display = 'grid';
      categoryGrid.innerHTML = games.map(createCardHTML).join('');
    });
  });

  // ---- Load More ----
  const allGamesGrid = document.getElementById('all-games-grid');
  const loadMoreBtn = document.getElementById('load-more');
  let shown = 20;
  const BATCH = 20;

  if (loadMoreBtn) {
    loadMoreBtn.addEventListener('click', () => {
      const next = sortedGamesData.slice(shown, shown + BATCH);
      next.forEach(g => {
        allGamesGrid.insertAdjacentHTML('beforeend', createCardHTML(g));
      });
      shown += next.length;
      if (shown >= sortedGamesData.length) {
        loadMoreBtn.style.display = 'none';
      }
    });
  }
</script>

