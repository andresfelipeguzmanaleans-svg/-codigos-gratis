<script>
  type Cmd = {command:string;syntax:string;aliases:string[];description:string;category:string;system?:string;systemSlug?:string};
  let all: Cmd[] = [];
  let loaded = false;
  let timer: ReturnType<typeof setTimeout>;
  const SYS_COLORS: Record<string,string> = {'hd-admin':'#ff6b9d','kohls-admin':'#c084fc','basic-admin':'#22d3ee','adonis-admin':'#fbbf24'};

  const input = document.getElementById('q') as HTMLInputElement;
  const resultsDiv = document.getElementById('search-results')!;

  function esc(s:string){return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;')}

  function resultHTML(cmd:Cmd){
    const color = SYS_COLORS[cmd.systemSlug||''] || '#06d6a0';
    const aliasText = cmd.aliases.length > 0 ? `<span class="sr-cmd__aliases">Aliases: ${esc(cmd.aliases.join(', '))}</span>` : '';
    return `<div class="sr-cmd"><div class="sr-cmd__top"><code class="sr-cmd__syntax">${esc(cmd.syntax)}</code><button class="sr-cmd__copy" data-syntax="${esc(cmd.syntax)}">Copiar</button></div><div class="sr-cmd__meta"><span class="sr-cmd__system" style="color:${color}">${esc(cmd.system||'')}</span><span class="sr-cmd__cat">${esc(cmd.category)}</span></div>${aliasText}${cmd.description ? `<p class="sr-cmd__desc">${esc(cmd.description).slice(0,120)}</p>` : ''}</div>`;
  }

  function search(q:string){
    if(!loaded || q.length < 2){ resultsDiv.style.display = 'none'; return; }
    const ql = q.toLowerCase();
    const matches = all.filter(c =>
      c.command.toLowerCase().includes(ql) ||
      c.aliases.some(a => a.toLowerCase().includes(ql)) ||
      c.syntax.toLowerCase().includes(ql) ||
      c.description.toLowerCase().includes(ql)
    ).slice(0, 20);

    if(matches.length === 0){
      resultsDiv.innerHTML = '<p class="sr-empty">No se encontraron comandos para "'+esc(q)+'"</p>';
    } else {
      resultsDiv.innerHTML = `<p class="sr-count">${matches.length >= 20 ? '20+' : matches.length} resultado${matches.length !== 1 ? 's' : ''}</p>` + matches.map(resultHTML).join('');
    }
    resultsDiv.style.display = 'block';
  }

  input.addEventListener('input', ()=>{
    clearTimeout(timer);
    timer = setTimeout(()=> search(input.value.trim()), 250);
  });

  // Hide results when clicking outside
  document.addEventListener('click', e=>{
    if(!(e.target as HTMLElement).closest('#search-results') && !(e.target as HTMLElement).closest('.search-box')){
      resultsDiv.style.display = 'none';
    }
  });

  // Copy delegation
  document.addEventListener('click', e=>{
    const btn = (e.target as HTMLElement).closest<HTMLButtonElement>('[data-syntax]');
    if(!btn) return;
    navigator.clipboard.writeText(btn.dataset.syntax!).then(()=>{
      btn.textContent = '‚úì Copiado';
      setTimeout(()=>{ btn.textContent = 'Copiar'; }, 2000);
    });
  });

  fetch('/data/admin-commands.json')
    .then(r=>r.json())
    .then((d:any)=>{
      all = d.systems.flatMap((sys:any)=>
        sys.commands.map((cmd:any)=>({...cmd, system: sys.name, systemSlug: sys.slug}))
      );
      loaded = true;
    });
</script>

