---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const title = 'Calculadora de Robux a Euros, Dólares y Pesos (2026) - ¿Cuánto cuestan los Robux?';
const description = 'Calcula cuánto cuestan los Robux en euros, dólares, pesos mexicanos, colombianos y más. Tabla de precios actualizada con y sin Premium.';

// Pre-compute prices for SSR mini-tables
const packs = [
  { robux: 400, usd: 4.99 },
  { robux: 800, usd: 9.99 },
  { robux: 1700, usd: 19.99 },
  { robux: 4500, usd: 49.99 },
  { robux: 10000, usd: 99.99 },
];

const rates: Record<string, { rate: number; symbol: string; decimals: number }> = {
  MXN: { rate: 17.20, symbol: '$', decimals: 0 },
  COP: { rate: 4150, symbol: '$', decimals: 0 },
  EUR: { rate: 0.92, symbol: '€', decimals: 2 },
  ARS: { rate: 1050, symbol: '$', decimals: 0 },
};

function fmtPrice(usd: number, cur: string): string {
  const { rate, symbol, decimals } = rates[cur];
  const val = usd * rate;
  const formatted = decimals === 0
    ? Math.round(val).toLocaleString('es-ES')
    : val.toFixed(decimals).replace('.', ',');
  return `${symbol}${formatted}`;
}

const miniTables = Object.fromEntries(
  Object.keys(rates).map((cur) => [
    cur,
    packs.map((p) => ({ robux: p.robux.toLocaleString('es-ES'), price: fmtPrice(p.usd, cur) })),
  ])
);

// FAQ Schema
const faqEntries = [
  {
    q: '¿Qué son los Robux?',
    a: 'Los Robux son la moneda virtual de Roblox. Con Robux puedes comprar accesorios para tu avatar, game passes, artículos exclusivos del catálogo y acceso a experiencias premium dentro de los juegos.',
  },
  {
    q: '¿Cómo comprar Robux?',
    a: '1. Inicia sesión en tu cuenta de Roblox. 2. Haz clic en el icono de Robux. 3. Selecciona el paquete que quieras. 4. Elige tu método de pago (tarjeta, PayPal, tarjeta regalo). 5. Confirma la compra.',
  },
  {
    q: '¿Merece la pena Roblox Premium?',
    a: 'Roblox Premium te da un 10% más de Robux en cada compra, una asignación mensual y acceso a artículos exclusivos. Si compras Robux con frecuencia, se amortiza rápidamente.',
  },
  {
    q: '¿Cuánto cuestan los Robux en pesos mexicanos?',
    a: `Los precios de Robux en MXN son: 400 Robux = ${fmtPrice(4.99, 'MXN')} MXN, 800 Robux = ${fmtPrice(9.99, 'MXN')} MXN, 1.700 Robux = ${fmtPrice(19.99, 'MXN')} MXN, 4.500 Robux = ${fmtPrice(49.99, 'MXN')} MXN, 10.000 Robux = ${fmtPrice(99.99, 'MXN')} MXN.`,
  },
  {
    q: '¿Cuánto cuestan los Robux en pesos colombianos?',
    a: `Los precios de Robux en COP son: 400 Robux = ${fmtPrice(4.99, 'COP')} COP, 800 Robux = ${fmtPrice(9.99, 'COP')} COP, 1.700 Robux = ${fmtPrice(19.99, 'COP')} COP, 4.500 Robux = ${fmtPrice(49.99, 'COP')} COP, 10.000 Robux = ${fmtPrice(99.99, 'COP')} COP.`,
  },
  {
    q: '¿Cuánto cuestan los Robux en euros?',
    a: `Los precios de Robux en EUR son: 400 Robux = ${fmtPrice(4.99, 'EUR')}, 800 Robux = ${fmtPrice(9.99, 'EUR')}, 1.700 Robux = ${fmtPrice(19.99, 'EUR')}, 4.500 Robux = ${fmtPrice(49.99, 'EUR')}, 10.000 Robux = ${fmtPrice(99.99, 'EUR')}.`,
  },
  {
    q: '¿Cuánto cuestan los Robux en pesos argentinos?',
    a: `Los precios de Robux en ARS son: 400 Robux = ${fmtPrice(4.99, 'ARS')} ARS, 800 Robux = ${fmtPrice(9.99, 'ARS')} ARS, 1.700 Robux = ${fmtPrice(19.99, 'ARS')} ARS, 4.500 Robux = ${fmtPrice(49.99, 'ARS')} ARS, 10.000 Robux = ${fmtPrice(99.99, 'ARS')} ARS.`,
  },
];

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqEntries.map((e) => ({
    '@type': 'Question',
    name: e.q,
    acceptedAnswer: { '@type': 'Answer', text: e.a },
  })),
};
