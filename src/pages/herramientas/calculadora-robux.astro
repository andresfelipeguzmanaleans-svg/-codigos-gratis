<script>
  const PACKS_NORMAL = [
    { robux: 400, usd: 4.99 },
    { robux: 800, usd: 9.99 },
    { robux: 1700, usd: 19.99 },
    { robux: 4500, usd: 49.99 },
    { robux: 10000, usd: 99.99 },
  ];
  const PACKS_PREMIUM = [
    { robux: 440, usd: 4.99 },
    { robux: 880, usd: 9.99 },
    { robux: 1870, usd: 19.99 },
    { robux: 4950, usd: 49.99 },
    { robux: 11000, usd: 99.99 },
  ];

  const RATES: Record<string, { rate: number; symbol: string; decimals: number }> = {
    USD: { rate: 1, symbol: '$', decimals: 2 },
    EUR: { rate: 0.92, symbol: '€', decimals: 2 },
    MXN: { rate: 17.20, symbol: '$', decimals: 0 },
    COP: { rate: 4150, symbol: '$', decimals: 0 },
    ARS: { rate: 1050, symbol: '$', decimals: 0 },
    CLP: { rate: 950, symbol: '$', decimals: 0 },
    PEN: { rate: 3.75, symbol: 'S/', decimals: 2 },
    BRL: { rate: 5.80, symbol: 'R$', decimals: 2 },
  };

  let currency = 'EUR';
  let premium = false;

  const pills = document.querySelectorAll<HTMLButtonElement>('.cpill');
  const premiumToggle = document.getElementById('premium-toggle') as HTMLInputElement;
  const robuxInput = document.getElementById('robux-input') as HTMLInputElement;
  const calcResult = document.getElementById('calc-result')!;
  const priceTbody = document.getElementById('price-tbody')!;

  function fmt(val: number, cur: string, forceDecimals?: number): string {
    const { symbol, decimals } = RATES[cur];
    const d = forceDecimals !== undefined ? forceDecimals : decimals;
    const formatted = d === 0
      ? Math.round(val).toLocaleString('es-ES')
      : val.toFixed(d).replace('.', ',');
    return `${symbol}${formatted}`;
  }

  function convert(usd: number): number {
    return usd * RATES[currency].rate;
  }

  function getPacks() {
    return premium ? PACKS_PREMIUM : PACKS_NORMAL;
  }

  function updateCalc() {
    const val = parseInt(robuxInput.value);
    if (!val || val <= 0) {
      calcResult.textContent = 'Escribe una cantidad para ver el precio';
      calcResult.classList.remove('calc-result--active');
      return;
    }
    const packs = getPacks();
    const bestPack = packs[packs.length - 1];
    const pricePerRobux = bestPack.usd / bestPack.robux;
    const totalUsd = val * pricePerRobux;
    const totalLocal = convert(totalUsd);
    calcResult.innerHTML = `<strong>${val.toLocaleString('es-ES')} Robux</strong> ≈ <strong>${fmt(totalLocal, currency)}</strong> <span class="calc-note">(al mejor precio por Robux)</span>`;
    calcResult.classList.add('calc-result--active');
  }

  function updateTable() {
    const packs = getPacks();
    // Find best value (lowest price per robux)
    let bestIdx = 0;
    let bestRatio = Infinity;
    packs.forEach((p, i) => {
      const ratio = p.usd / p.robux;
      if (ratio < bestRatio) { bestRatio = ratio; bestIdx = i; }
    });

    // Base price per robux (first/most expensive pack) for savings calc
    const baseRatio = packs[0].usd / packs[0].robux;

    priceTbody.innerHTML = packs.map((p, i) => {
      const local = convert(p.usd);
      const perRobux = convert(p.usd / p.robux);
      const isBest = i === bestIdx;
      const ratio = p.usd / p.robux;
      const savingPct = i === 0 ? 0 : Math.round((1 - ratio / baseRatio) * 100);
      const savingHtml = savingPct > 0 ? `<span class="saving">-${savingPct}%</span>` : '—';
      return `<tr class="${isBest ? 'best-row' : ''}">
        <td><strong>${p.robux.toLocaleString('es-ES')}</strong></td>
        <td>${fmt(local, currency)}</td>
        <td>${fmt(perRobux, currency, 4)}</td>
        <td>${savingHtml}</td>
        <td>${isBest ? '<span class="best-badge">Mejor valor</span>' : ''}</td>
      </tr>`;
    }).join('');
  }

  function updateAll() {
    updateCalc();
    updateTable();
  }

  // Events
  pills.forEach(btn => {
    btn.addEventListener('click', () => {
      pills.forEach(b => b.classList.remove('cpill--active'));
      btn.classList.add('cpill--active');
      currency = btn.dataset.cur!;
      updateAll();
    });
  });

  premiumToggle.addEventListener('change', () => {
    premium = premiumToggle.checked;
    updateAll();
  });

  robuxInput.addEventListener('input', updateCalc);

  // Quick buttons
  document.querySelectorAll<HTMLButtonElement>('.qbtn').forEach(btn => {
    btn.addEventListener('click', () => {
      robuxInput.value = btn.dataset.val!;
      robuxInput.dispatchEvent(new Event('input'));
    });
  });

  // Init
  updateAll();
</script>

