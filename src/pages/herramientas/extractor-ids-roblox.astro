<script>
  const TYPE_LABELS: Record<string, { icon: string; label: string }> = {
    game: { icon: 'üéÆ', label: 'Juego' },
    user: { icon: 'üë§', label: 'Usuario' },
    asset: { icon: 'üõçÔ∏è', label: 'Item / Asset' },
    group: { icon: 'üë•', label: 'Grupo' },
    gamepass: { icon: 'üé´', label: 'Game Pass' },
    bundle: { icon: 'üì¶', label: 'Bundle' },
    badge: { icon: 'üèÖ', label: 'Badge' },
  };

  const ID_LABELS: Record<string, string> = {
    placeId: 'Place ID',
    universeId: 'Universe ID',
    userId: 'User ID',
    assetId: 'Asset ID',
    groupId: 'Group ID',
    gamePassId: 'Game Pass ID',
    bundleId: 'Bundle ID',
    badgeId: 'Badge ID',
    creatorId: 'Creator ID',
    creatorType: 'Creator Type',
    ownerId: 'Owner ID',
    targetId: 'Target ID',
    iconImageAssetId: 'Icon Asset ID',
    itemIds: 'Item IDs',
  };

  const input = document.getElementById('q') as HTMLInputElement;
  const btn = document.getElementById('extract-btn')!;
  const errEl = document.getElementById('error-msg')!;
  const loader = document.getElementById('loader')!;
  const result = document.getElementById('result')!;

  function esc(s: string): string {
    return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
  }

  function fmtNum(n: number): string {
    if (n >= 1_000_000_000) return (n / 1_000_000_000).toFixed(1).replace('.0', '') + 'B';
    if (n >= 1_000_000) return (n / 1_000_000).toFixed(1).replace('.0', '') + 'M';
    if (n >= 1_000) return (n / 1_000).toFixed(1).replace('.0', '') + 'K';
    return n.toLocaleString('es-ES');
  }

  function showErr(msg: string) {
    errEl.textContent = msg;
    errEl.style.display = 'block';
    loader.style.display = 'none';
    result.style.display = 'none';
  }

  // Example buttons
  document.querySelectorAll<HTMLElement>('.example-btn').forEach(b => {
    b.addEventListener('click', () => {
      input.value = b.dataset.url!;
      extract();
    });
  });

  // Copy delegation
  result.addEventListener('click', e => {
    const btn = (e.target as HTMLElement).closest<HTMLButtonElement>('.copy-btn');
    if (!btn) return;
    navigator.clipboard.writeText(btn.dataset.val!).then(() => {
      btn.textContent = '‚úì';
      btn.classList.add('copy-btn--ok');
      setTimeout(() => { btn.textContent = 'Copiar'; btn.classList.remove('copy-btn--ok'); }, 1500);
    });
  });

  async function extract() {
    const url = input.value.trim();
    if (!url) { showErr('Pega un enlace de Roblox.'); return; }

    errEl.style.display = 'none';
    result.style.display = 'none';
    loader.style.display = 'flex';
    btn.setAttribute('disabled', '');

    try {
      const res = await fetch(`/api/roblox-ids?url=${encodeURIComponent(url)}`);
      const data = await res.json();

      if (!res.ok) { showErr(data.error || 'Error al extraer IDs.'); btn.removeAttribute('disabled'); return; }

      const t = TYPE_LABELS[data.type] || { icon: '‚ùì', label: data.type };

      // Type badge
      document.getElementById('r-type')!.innerHTML = `${t.icon} ${t.label}`;

      // Header
      const thumb = document.getElementById('r-thumb') as HTMLImageElement;
      const headerEl = document.getElementById('r-header')!;
      if (data.meta.thumbnail) {
        thumb.src = data.meta.thumbnail;
        thumb.alt = data.meta.name || '';
        thumb.style.display = 'block';
      } else {
        thumb.style.display = 'none';
      }

      const nameEl = document.getElementById('r-name')!;
      nameEl.textContent = data.meta.name || data.meta.displayName || '';
      headerEl.style.display = (data.meta.name || data.meta.displayName) ? 'flex' : 'none';

      const descEl = document.getElementById('r-desc')!;
      const desc = data.meta.description || '';
      descEl.textContent = desc.length > 200 ? desc.slice(0, 200) + '...' : desc;
      descEl.style.display = desc ? 'block' : 'none';

      // IDs table
      const tbody = document.getElementById('ids-tbody')!;
      let rows = '';
      for (const [key, val] of Object.entries(data.ids)) {
        if (!val) continue;
        const label = ID_LABELS[key] || key;
        rows += `<tr>
          <td class="ids-table__label">${esc(label)}</td>
          <td class="ids-table__val"><code>${esc(String(val))}</code></td>
          <td class="ids-table__action"><button class="copy-btn" data-val="${esc(String(val))}">Copiar</button></td>
        </tr>`;
      }
      tbody.innerHTML = rows;

      // Meta stats
      const metaGrid = document.getElementById('meta-grid')!;
      let metaCards = '';
      const m = data.meta;

      if (data.type === 'game') {
        if (m.playing != null) metaCards += statCard('üü¢', 'Jugando', fmtNum(m.playing));
        if (m.visits != null) metaCards += statCard('üëÅ', 'Visitas', fmtNum(m.visits));
        if (m.likes != null) metaCards += statCard('üëç', 'Likes', fmtNum(m.likes));
        if (m.maxPlayers) metaCards += statCard('üë•', 'Max jugadores', String(m.maxPlayers));
        if (m.genre) metaCards += statCard('üè∑Ô∏è', 'G√©nero', m.genre);
        if (m.creator) metaCards += statCard('üõ†Ô∏è', 'Creador', m.creator);
      } else if (data.type === 'user') {
        if (m.displayName && m.displayName !== m.name) metaCards += statCard('‚ú®', 'Display Name', m.displayName);
        if (m.created) metaCards += statCard('üìÖ', 'Creada', fmtDateShort(m.created));
        if (m.hasVerifiedBadge) metaCards += statCard('‚úÖ', 'Verificado', 'S√≠');
      } else if (data.type === 'asset') {
        if (m.assetType) metaCards += statCard('üì¶', 'Tipo', m.assetType);
        if (m.priceInRobux != null) metaCards += statCard('üí∞', 'Precio', m.priceInRobux === 0 ? 'Gratis' : `${fmtNum(m.priceInRobux)} R$`);
        if (m.sales) metaCards += statCard('üìä', 'Ventas', fmtNum(m.sales));
        if (m.creator) metaCards += statCard('üõ†Ô∏è', 'Creador', m.creator);
      } else if (data.type === 'group') {
        if (m.memberCount) metaCards += statCard('üë•', 'Miembros', fmtNum(m.memberCount));
        if (m.owner) metaCards += statCard('üëë', 'Due√±o', m.owner);
      } else if (data.type === 'gamepass') {
        if (m.priceInRobux != null) metaCards += statCard('üí∞', 'Precio', m.priceInRobux === 0 ? 'Gratis' : `${fmtNum(m.priceInRobux)} R$`);
      } else if (data.type === 'badge') {
        if (m.gameName) metaCards += statCard('üéÆ', 'Juego', m.gameName);
        if (m.awardedCount) metaCards += statCard('üèÜ', 'Obtenido', fmtNum(m.awardedCount) + ' veces');
        if (m.winRatePercentage) metaCards += statCard('üìä', 'Win Rate', m.winRatePercentage.toFixed(1) + '%');
      }

      metaGrid.innerHTML = metaCards;
      metaGrid.style.display = metaCards ? 'grid' : 'none';

      // CTA link
      (document.getElementById('r-link') as HTMLAnchorElement).href = url;

      loader.style.display = 'none';
      result.style.display = 'block';
      btn.removeAttribute('disabled');
    } catch {
      showErr('Error de conexi√≥n. Int√©ntalo de nuevo.');
      btn.removeAttribute('disabled');
    }
  }

  function statCard(icon: string, label: string, value: string): string {
    return `<div class="meta-card"><span class="meta-card__icon">${icon}</span><span class="meta-card__label">${esc(label)}</span><span class="meta-card__val">${esc(value)}</span></div>`;
  }

  function fmtDateShort(iso: string): string {
    const MONTHS = ['ene','feb','mar','abr','may','jun','jul','ago','sep','oct','nov','dic'];
    const d = new Date(iso);
    return `${d.getDate()} ${MONTHS[d.getMonth()]} ${d.getFullYear()}`;
  }

  btn.addEventListener('click', extract);
  input.addEventListener('keydown', e => { if (e.key === 'Enter') extract(); });
</script>

