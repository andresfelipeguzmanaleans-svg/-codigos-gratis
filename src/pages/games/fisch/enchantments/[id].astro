---
import GameLayout from '../../../../layouts/GameLayout.astro';
import rawData from '../../../../data/games/fisch/enchantments.json';

interface EnchantmentData {
  name: string;
  slug: string;
  type: string;
  subType?: string;
  effect: string | null;
  tips: string | null;
  obtainment: string | null;
  source: string;
}

export function getStaticPaths() {
  return (rawData as EnchantmentData[])
    .filter(i => i.slug && i.name)
    .map(item => ({ params: { id: item.slug }, props: { item } }));
}

const { item } = Astro.props as { item: EnchantmentData };

const TYPE_COLORS: Record<string, string> = {
  Regular: '#6366F1',
  Exalted: '#F59E0B',
  Cosmic: '#8B5CF6',
  Twisted: '#EF4444',
  Limited: '#EC4899',
  Quest: '#22D3EE',
};

const typeColor = TYPE_COLORS[item.type] || '#6b7280';

const description = `${item.name} is a ${item.type} enchantment in Fisch. ${item.effect ? item.effect.split('\n')[0].slice(0, 120) : ''}`;

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Thing',
  name: item.name,
  description,
};

const effectLines = (item.effect || '').split('\n').filter(Boolean);

// Generate How to Get text
function getHowToGetText(): string[] {
  const lines: string[] = [];

  if (item.obtainment) {
    lines.push(item.obtainment);
  }

  const typeHints: Record<string, string> = {
    Regular: 'Enchant your rod at the Statue of Sovereignty using Enchant Relics. Regular enchantments are available in the standard enchanting pool.',
    Exalted: 'Enchant your rod at the Statue of Sovereignty using Enchant Relics. Exalted enchantments are rarer and more powerful than Regular ones.',
    Cosmic: 'Enchant your rod at the Statue of Sovereignty using Enchant Relics. Cosmic enchantments are extremely rare and offer unique effects.',
    Twisted: 'Enchant your rod at the Statue of Sovereignty using Enchant Relics. Twisted enchantments have powerful but double-edged effects.',
    Limited: 'This enchantment was available for a limited time only. It may return during special events.',
    Quest: 'This enchantment is obtained through a specific quest. Complete the required quest to unlock it.',
  };

  if (!item.obtainment && typeHints[item.type]) {
    lines.push(typeHints[item.type]);
  }

  return lines;
}

const howToGetLines = getHowToGetText();
---

<GameLayout
  title={`${item.name} - Effect & Cost | Fisch Roblox`}
  description={description}
  game="Fisch"
  breadcrumbs={[
    { label: 'Enchantments', href: '/games/fisch/enchantments/' },
    { label: item.name, href: `/games/fisch/enchantments/${item.slug}/` },
  ]}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  </Fragment>

  <div class="td">
    <!-- Hero -->
    <div class="td__hero" style={`--accent-clr: ${typeColor}`}>
      <div class="td__hero-icon">âœ¨</div>
      <div class="td__hero-info">
        <div class="td__badges-top">
          <span class="td__source-badge" style={`--badge-clr: ${typeColor}`}>{item.type}</span>
          {item.subType && (
            <span class="td__type-badge">{item.subType}</span>
          )}
          <span class="td__type-badge">Enchantment</span>
        </div>
        <h1 class="td__title">{item.name}</h1>
      </div>
    </div>

    <!-- Stats grid -->
    <div class="td__grid">
      <div class="td__stat">
        <span class="td__stat-label">Type</span>
        <span class="td__stat-val" style={`color: ${typeColor}`}>{item.type}</span>
      </div>
      {item.subType && (
        <div class="td__stat">
          <span class="td__stat-label">Slot</span>
          <span class="td__stat-val">{item.subType}</span>
        </div>
      )}
      <div class="td__stat">
        <span class="td__stat-label">Source</span>
        <span class="td__stat-val">{item.source}</span>
      </div>
    </div>

    <!-- Effect -->
    {effectLines.length > 0 && (
      <div class="td__section">
        <h2 class="td__section-title">Effect</h2>
        <div class="td__effect-list">
          {effectLines.map(line => (
            <p class="td__effect-line">{line}</p>
          ))}
        </div>
      </div>
    )}

    <!-- Tips -->
    {item.tips && (
      <div class="td__section">
        <h2 class="td__section-title">Tips</h2>
        <p class="td__text">{item.tips}</p>
      </div>
    )}

    <!-- How to Get -->
    {howToGetLines.length > 0 && (
      <details class="htg-accordion" open>
        <summary class="htg-accordion__toggle">
          <span class="htg-accordion__icon">ðŸ“–</span>
          <span class="htg-accordion__text">How to Get</span>
          <svg class="htg-accordion__chevron" width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 8 10 12 14 8"/></svg>
        </summary>
        <div class="htg-accordion__body">
          {howToGetLines.map(line => (
            <p class="htg-accordion__para">{line}</p>
          ))}
        </div>
      </details>
    )}

    <a href="/games/fisch/enchantments/" class="td__back">&larr; All Enchantments</a>
  </div>
</GameLayout>

<style>
  .td { max-width: 720px; margin: 0 auto; padding: 1rem; }

  .td__hero {
    display: flex; gap: 1.5rem; align-items: center;
    background: linear-gradient(135deg, color-mix(in srgb, var(--accent-clr) 12%, transparent), var(--bg-card));
    border: 1px solid var(--border); border-radius: 16px;
    padding: 1.5rem; margin-bottom: 1.25rem;
  }

  .td__hero-icon { font-size: 3.5rem; flex-shrink: 0; }
  .td__hero-info { flex: 1; min-width: 0; }

  .td__badges-top { display: flex; gap: 0.4rem; margin-bottom: 0.5rem; flex-wrap: wrap; }
  .td__source-badge {
    font-size: 0.7rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.5px;
    padding: 0.15rem 0.55rem; border-radius: 9999px;
    color: var(--badge-clr); border: 1px solid var(--badge-clr);
    background: color-mix(in srgb, var(--badge-clr) 12%, transparent);
  }
  .td__type-badge {
    font-size: 0.7rem; font-weight: 600; padding: 0.15rem 0.55rem; border-radius: 9999px;
    color: var(--text-dim); border: 1px solid var(--border); background: rgba(255,255,255,0.03);
  }

  .td__title { font-family: var(--font-display); font-size: 1.5rem; font-weight: 700; color: #fff; margin: 0; }

  .td__grid {
    display: grid; grid-template-columns: repeat(2, 1fr); gap: 0.75rem;
    margin-bottom: 1.25rem;
  }
  @media (min-width: 640px) { .td__grid { grid-template-columns: repeat(3, 1fr); } }

  .td__stat {
    background: var(--bg-card); border: 1px solid var(--border); border-radius: 12px;
    padding: 0.75rem 1rem; display: flex; flex-direction: column; gap: 0.2rem;
  }
  .td__stat-label { font-size: 0.7rem; font-weight: 500; color: var(--text-dim); text-transform: uppercase; letter-spacing: 0.5px; }
  .td__stat-val { font-family: var(--font-display); font-size: 1.05rem; font-weight: 700; color: var(--text); }

  .td__section {
    background: var(--bg-card); border: 1px solid var(--border); border-radius: 12px;
    padding: 1rem 1.25rem; margin-bottom: 1.25rem;
  }
  .td__section-title { font-family: var(--font-display); font-size: 0.9rem; font-weight: 700; color: var(--text); margin: 0 0 0.6rem; text-transform: uppercase; letter-spacing: 0.05em; }

  .td__effect-list { display: flex; flex-direction: column; gap: 0.35rem; }
  .td__effect-line { font-size: 0.88rem; color: var(--text-dim); line-height: 1.6; margin: 0; }

  .td__text { font-size: 0.88rem; color: var(--text-dim); line-height: 1.6; margin: 0; }

  /* How to Get Accordion */
  .htg-accordion { border: 1px solid rgba(34, 211, 238, 0.4); border-radius: 12px; background: rgba(34, 211, 238, 0.08); overflow: hidden; margin-bottom: 1.25rem; }
  .htg-accordion__toggle { display: flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1rem; cursor: pointer; color: #22d3ee; list-style: none; transition: background 0.2s; }
  .htg-accordion__toggle::-webkit-details-marker { display: none; }
  .htg-accordion__toggle:hover { background: rgba(34, 211, 238, 0.18); }
  .htg-accordion__icon { font-size: 1.1rem; flex-shrink: 0; }
  .htg-accordion__text { font-family: var(--font-display); font-size: 0.95rem; font-weight: 700; letter-spacing: 0.04em; }
  .htg-accordion__chevron { margin-left: auto; flex-shrink: 0; transition: transform 0.3s ease; }
  .htg-accordion[open] > .htg-accordion__toggle .htg-accordion__chevron { transform: rotate(180deg); }
  .htg-accordion__body { padding: 0 1rem 1rem; border-top: 1px solid rgba(34, 211, 238, 0.2); animation: htg-slide-down 0.3s ease; }
  @keyframes htg-slide-down { from { opacity: 0; transform: translateY(-8px); } to { opacity: 1; transform: translateY(0); } }
  .htg-accordion__para { font-size: 0.88rem; color: var(--text-dim); line-height: 1.65; }
  .htg-accordion__para:first-child { margin-top: 1rem; }
  .htg-accordion__para + .htg-accordion__para { margin-top: 0.75rem; }

  .td__back {
    display: inline-flex; align-items: center; gap: 0.3rem;
    font-size: 0.85rem; color: var(--accent); font-weight: 500;
    transition: opacity 0.2s;
  }
  .td__back:hover { opacity: 0.8; }

  @media (max-width: 639px) {
    .td__hero { flex-direction: column; text-align: center; padding: 1rem; }
    .td__badges-top { justify-content: center; }
    .td__title { font-size: 1.25rem; }
    .htg-accordion__toggle { min-height: 48px; }
    .htg-accordion__text { font-size: 1rem; }
    .htg-accordion__para { font-size: 1rem; line-height: 1.7; }
    .htg-accordion__para + .htg-accordion__para { margin-top: 1rem; }
  }
</style>
