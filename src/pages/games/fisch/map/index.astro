---
import GameLayout from '../../../../layouts/GameLayout.astro';
import FischWorldMap from '../../../../components/FischWorldMap.tsx';
import locationsData from '../../../../data/games/fisch/locations.json';

const mapLocations = (locationsData as any[]).map(loc => ({
  id: loc.id,
  name: loc.name,
  fishCount: loc.fishCount || 0,
  isPremium: loc.isPremium || false,
  isEvent: loc.isEvent || false,
  isSeasonal: loc.isSeasonal || false,
  coords: loc.coords || null,
  imagePath: loc.imagePath || null,
  fish: (loc.fish || []).map((f: any) => ({
    name: f.name,
    rarity: f.rarity,
    id: f.name.toLowerCase().replace(/['']/g, '').replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, ''),
  })),
  availableWeathers: loc.availableWeathers || [],
}));

const totalFish = mapLocations.reduce((s: number, l: any) => s + l.fishCount, 0);
const description = `Interactive painted map of all Fisch fishing locations. Click any island to explore ${totalFish} fish.`;
---

<GameLayout
  title="Interactive Map - All Fishing Locations | Fisch Roblox"
  description={description}
  game="Fisch"
  breadcrumbs={[{ label: 'Map', href: '/games/fisch/map/' }]}
>
  <div class="map-page">
    <div class="map-hero">
      <h1 class="mh-t">üó∫Ô∏è <span class="mh-a">INTERACTIVE</span> MAP</h1>
      <p class="mh-s">26 locations &bull; {totalFish.toLocaleString('en-US')} fish &bull; Click any island to explore</p>
    </div>
    <FischWorldMap client:load locations={mapLocations} gameSlug="fisch"/>
  </div>
</GameLayout>

<style>
  .map-page { display: flex; flex-direction: column; }
  .map-hero { text-align: center; padding: 24px 20px 12px; }
  .mh-t { font-size: 24px; font-weight: 800; letter-spacing: 2px; color: #fff; margin: 0; }
  .mh-a { color: #22d3ee; }
  .mh-s { color: #64748b; font-size: 13px; margin-top: 4px; }
  @media (max-width: 767px) {
    .map-hero { padding: 16px 16px 8px; }
    .mh-t { font-size: 20px; }
    .mh-s { font-size: 12px; }
  }

  /* ====== ROOT ====== */
  :global(.fwm) { max-width: 1200px; margin: 0 auto; padding: 0 16px 40px; position: relative; }

  /* ====== CONTROLS ====== */
  :global(.fwm-ctrls) { display: flex; gap: 8px; align-items: center; flex-wrap: wrap; margin-bottom: 12px; }
  :global(.fwm-search) {
    flex: 1; min-width: 180px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px; padding: 9px 14px;
    color: #e2e8f0; font-size: 13px; font-family: inherit; outline: none;
    transition: border-color 0.2s;
  }
  :global(.fwm-search:focus) { border-color: #22d3ee; }
  :global(.fwm-search::placeholder) { color: #475569; }
  :global(.fwm-pills) { display: flex; gap: 6px; }
  :global(.fwm-pill) {
    padding: 6px 14px; border-radius: 20px; font-size: 12px; font-weight: 600;
    border: 1px solid rgba(255,255,255,0.1); background: transparent;
    color: #94a3b8; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-pill:hover) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-pill--on) { background: #22d3ee; color: #080e1a; border-color: #22d3ee; }

  /* ====== MAP FRAME (painted background) ====== */
  :global(.fwm-frame) {
    position: relative; width: 100%;
    aspect-ratio: 5504 / 3072;
    background-image: url('/images/map/fisch-world-map.png');
    background-size: 100% 100%;
    background-position: center;
    border-radius: 16px;
    border: 2px solid rgba(255,255,255,0.08);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
    cursor: default;
  }

  /* ====== ISLAND BUTTONS ====== */
  :global(.fwm-btn) {
    position: absolute;
    background: none; border: 2px solid transparent; padding: 0;
    cursor: pointer; z-index: 2;
    display: flex; flex-direction: column; align-items: center;
    border-radius: 12px;
    transition: filter 0.2s, border-color 0.2s;
    font-family: inherit;
    transform-origin: center;
  }
  :global(.fwm-btn:hover) {
    filter: brightness(1.15) drop-shadow(0 0 12px rgba(34,211,238,0.5));
    z-index: 10;
  }
  :global(.fwm-btn--on) {
    border-color: #22d3ee;
    filter: brightness(1.1) drop-shadow(0 0 20px rgba(34,211,238,0.6));
    z-index: 20;
  }
  :global(.fwm-btn__img) {
    width: 100%; height: auto;
    pointer-events: none;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.5));
  }
  :global(.fwm-btn__n) {
    font-size: 9px; font-weight: 700; color: #fff;
    text-shadow: 0 1px 4px rgba(0,0,0,0.95), 0 0 8px rgba(0,0,0,0.6);
    white-space: nowrap; margin-top: 2px; text-align: center;
  }
  :global(.fwm-btn__f) {
    font-size: 7px; font-weight: 700; color: #22d3ee;
    background: rgba(0,0,0,0.6); padding: 1px 6px; border-radius: 4px;
    margin-top: 1px; white-space: nowrap;
  }

  /* ====== FISH ORBIT ====== */
  :global(.fwm-orbit) {
    position: absolute; left: 50%; top: 50%;
    width: 0; height: 0; z-index: 30;
    pointer-events: none;
    animation: fwm-fadein 0.3s ease;
  }
  @keyframes fwm-fadein {
    from { opacity: 0; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1); }
  }
  :global(.fwm-fdot) {
    position: absolute; left: 0; top: 0;
    width: 30px; height: 30px; margin: -15px 0 0 -15px;
    display: flex; flex-direction: column; align-items: center;
    text-decoration: none; cursor: pointer;
    pointer-events: auto;
    transition: transform 0.15s;
  }
  :global(.fwm-fdot:hover) { transform: scale(1.3) !important; z-index: 40 !important; }
  :global(.fwm-fdot img) {
    width: 28px; height: 28px; border-radius: 50%; object-fit: contain;
    border: 2px solid inherit; background: rgba(0,0,0,0.5);
    box-shadow: 0 1px 4px rgba(0,0,0,0.5);
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.4));
  }
  :global(.fwm-fdot__n) {
    font-size: 6px; font-weight: 600; color: #fff;
    text-shadow: 0 1px 3px #000; white-space: nowrap; text-align: center;
    margin-top: 1px; max-width: 60px; overflow: hidden; text-overflow: ellipsis;
  }

  /* ====== SPECIAL ZONES ====== */
  :global(.fwm-sz) {
    position: absolute; transform: translate(-50%, -50%);
    background: none; border: none; padding: 0;
    cursor: pointer; z-index: 3;
    display: flex; flex-direction: column; align-items: center;
    font-family: inherit;
    transition: transform 0.2s;
  }
  :global(.fwm-sz:hover) { transform: translate(-50%, -50%) scale(1.1); }
  :global(.fwm-sz--on) { z-index: 15; }
  :global(.fwm-sz__i) {
    width: 28px; height: 28px; border-radius: 50%;
    background: rgba(0,0,0,0.55); border: 1.5px solid rgba(255,255,255,0.2);
    display: flex; align-items: center; justify-content: center;
    font-size: 14px; line-height: 1;
    box-shadow: 0 2px 8px rgba(0,0,0,0.5);
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  :global(.fwm-sz:hover .fwm-sz__i) { border-color: #22d3ee; box-shadow: 0 0 12px rgba(34,211,238,0.4); }
  :global(.fwm-sz--on .fwm-sz__i) { border-color: #22d3ee; box-shadow: 0 0 16px rgba(34,211,238,0.5); }
  :global(.fwm-sz__n) {
    font-size: 7px; font-weight: 700; color: #fff;
    text-shadow: 0 1px 4px rgba(0,0,0,0.95);
    white-space: nowrap; margin-top: 2px;
  }

  /* ====== MARKER (Where Am I) ====== */
  :global(.fwm-marker) {
    position: absolute; transform: translate(-50%, -50%); z-index: 50;
    pointer-events: none;
    display: flex; flex-direction: column; align-items: center;
  }
  :global(.fwm-marker__dot) {
    width: 16px; height: 16px; border-radius: 50%;
    background: #ef4444; border: 3px solid #fff;
    box-shadow: 0 0 0 4px rgba(239,68,68,0.3);
    animation: fwm-pulse 1.5s ease-in-out infinite;
  }
  @keyframes fwm-pulse {
    0%, 100% { box-shadow: 0 0 0 4px rgba(239,68,68,0.3); }
    50% { box-shadow: 0 0 0 14px rgba(239,68,68,0.08); }
  }
  :global(.fwm-marker__tip) {
    position: absolute; bottom: calc(100% + 8px); left: 50%; transform: translateX(-50%);
    background: rgba(0,0,0,0.88); backdrop-filter: blur(8px);
    padding: 6px 12px; border-radius: 8px;
    font-size: 10px; color: #e2e8f0; white-space: nowrap; line-height: 1.5;
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow: 0 4px 16px rgba(0,0,0,0.4);
  }

  /* ====== WHERE AM I (floating widget) ====== */
  :global(.fwm-where) {
    position: relative; margin-top: 10px;
    display: inline-flex; flex-direction: column;
  }
  :global(.fwm-where__toggle) {
    padding: 8px 16px; border-radius: 10px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    color: #94a3b8; font-size: 12px; font-weight: 700; cursor: pointer;
    font-family: inherit; transition: all 0.2s;
  }
  :global(.fwm-where__toggle:hover) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-where--open .fwm-where__toggle) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-where__body) {
    margin-top: 8px; padding: 10px 14px;
    background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.06);
    border-radius: 10px;
  }
  :global(.fwm-where__row) { display: flex; gap: 6px; align-items: center; }
  :global(.fwm-where__in) {
    width: 65px; padding: 6px 8px; border-radius: 8px;
    background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);
    color: #e2e8f0; font-size: 13px; font-family: monospace; outline: none;
    transition: border-color 0.2s;
  }
  :global(.fwm-where__in:focus) { border-color: #22d3ee; }
  :global(.fwm-where__in::placeholder) { color: #475569; }
  :global(.fwm-where__in--y) { opacity: 0.5; width: 50px; }
  :global(.fwm-where__btn) {
    padding: 6px 14px; border-radius: 8px;
    background: #22d3ee; color: #080e1a; font-weight: 700;
    font-size: 12px; border: none; cursor: pointer;
    font-family: inherit; transition: all 0.2s;
  }
  :global(.fwm-where__btn:hover) { background: #67e8f9; }
  :global(.fwm-where__result) {
    margin-top: 8px; font-size: 11px; color: #94a3b8;
    display: flex; align-items: center; gap: 8px;
  }
  :global(.fwm-where__clr) {
    width: 20px; height: 20px; border-radius: 50%;
    background: rgba(239,68,68,0.15); border: 1px solid rgba(239,68,68,0.3);
    color: #ef4444; font-size: 10px; cursor: pointer;
    display: flex; align-items: center; justify-content: center;
    font-family: inherit;
  }

  /* ====== INFO PANEL ====== */
  :global(.fwm-panel) {
    position: absolute; top: 0; right: 0; bottom: 0;
    width: 300px; z-index: 100;
    background: rgba(8,14,26,0.95); backdrop-filter: blur(16px);
    border-left: 1px solid rgba(255,255,255,0.08);
    transform: translateX(100%); transition: transform 0.3s ease;
    overflow-y: auto; display: flex; flex-direction: column;
  }
  :global(.fwm-panel--open) { transform: translateX(0); }

  :global(.fwm-panel__hd) { position: relative; }
  :global(.fwm-panel__close) {
    position: absolute; top: 10px; right: 10px; z-index: 2;
    width: 32px; height: 32px; border-radius: 50%;
    background: rgba(0,0,0,0.5); border: 1px solid rgba(255,255,255,0.1);
    color: #e2e8f0; font-size: 14px; cursor: pointer;
    display: flex; align-items: center; justify-content: center;
    font-family: inherit; transition: all 0.15s;
  }
  :global(.fwm-panel__close:hover) { background: rgba(239,68,68,0.3); border-color: #ef4444; color: #ef4444; }
  :global(.fwm-panel__hero-wrap) { position: relative; width: 100%; height: 120px; overflow: hidden; }
  :global(.fwm-panel__hero) { width: 100%; height: 100%; object-fit: cover; }
  :global(.fwm-panel__hero-ov) {
    position: absolute; inset: 0;
    background: linear-gradient(to top, rgba(8,14,26,0.95) 0%, rgba(8,14,26,0.3) 50%, transparent 100%);
  }
  :global(.fwm-panel__hd-text) { padding: 12px 16px; }
  :global(.fwm-panel__title) { font-size: 18px; font-weight: 700; color: #fff; margin: 0; }
  :global(.fwm-panel__meta) { display: flex; gap: 8px; margin-top: 4px; font-size: 11px; color: #64748b; flex-wrap: wrap; }
  :global(.fwm-panel__cnt) { color: #22d3ee; font-weight: 600; }
  :global(.fwm-panel__xy) { font-family: monospace; font-size: 10px; }
  :global(.fwm-panel__parent) {
    display: inline-flex; align-items: center; gap: 4px;
    font-size: 11px; color: #22d3ee; cursor: pointer; margin-top: 6px;
    font-weight: 600; background: none; border: none; font-family: inherit; padding: 0;
  }
  :global(.fwm-panel__parent:hover) { text-decoration: underline; }

  :global(.fwm-panel__wx) {
    padding: 10px 16px; display: flex; gap: 4px; flex-wrap: wrap;
    border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  :global(.fwm-wxc) { padding: 2px 8px; border-radius: 10px; font-size: 10px; font-weight: 600; }
  :global(.fwm-wx--sun) { background: rgba(250,204,21,0.12); color: #facc15; }
  :global(.fwm-wx--rain) { background: rgba(59,130,246,0.12); color: #3b82f6; }
  :global(.fwm-wx--thun) { background: rgba(168,85,247,0.12); color: #a855f7; }
  :global(.fwm-wx--wind) { background: rgba(148,163,184,0.12); color: #94a3b8; }
  :global(.fwm-wx--fog) { background: rgba(100,116,139,0.12); color: #64748b; }
  :global(.fwm-wx--bliz) { background: rgba(147,197,253,0.12); color: #93c5fd; }
  :global(.fwm-wx--snow) { background: rgba(226,232,240,0.1); color: #e2e8f0; }
  :global(.fwm-wx--any) { background: rgba(250,204,21,0.08); color: #fbbf24; }

  :global(.fwm-panel__subs) { padding: 10px 16px; border-bottom: 1px solid rgba(255,255,255,0.04); }
  :global(.fwm-panel__slbl) { font-size: 9px; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 6px; }
  :global(.fwm-panel__si) {
    display: flex; align-items: center; gap: 8px;
    padding: 6px 8px; border-radius: 6px; cursor: pointer;
    transition: background 0.15s; font-size: 12px; color: #cbd5e1; font-weight: 500;
  }
  :global(.fwm-panel__si:hover) { background: rgba(255,255,255,0.04); }
  :global(.fwm-panel__si--on) { background: rgba(34,211,238,0.1); color: #22d3ee; }
  :global(.fwm-panel__sid) { width: 8px; height: 8px; border-radius: 50%; background: #22d3ee; flex-shrink: 0; }
  :global(.fwm-panel__sic) { margin-left: auto; font-size: 10px; color: #475569; }

  :global(.fwm-panel__fl) { padding: 8px 16px 16px; flex: 1; overflow-y: auto; }
  :global(.fwm-panel__fll) { font-size: 9px; font-weight: 700; color: #475569; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 6px; }
  :global(.fwm-panel__emp) { text-align: center; padding: 1rem; color: #475569; font-size: 12px; }
  :global(.fwm-panel__fi) {
    display: flex; align-items: center; gap: 8px;
    padding: 5px 6px; border-radius: 6px; cursor: pointer;
    transition: background 0.15s; text-decoration: none; color: inherit;
  }
  :global(.fwm-panel__fi:hover) { background: rgba(255,255,255,0.04); }
  :global(.fwm-panel__fimg) {
    width: 32px; height: 32px; border-radius: 6px; overflow: hidden; flex-shrink: 0;
    display: flex; align-items: center; justify-content: center;
    border: 1px solid rgba(255,255,255,0.08);
  }
  :global(.fwm-panel__fimg img) { width: 80%; height: 80%; object-fit: contain; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.4)); }
  :global(.fwm-panel__fn) { flex: 1; font-size: 12px; font-weight: 500; color: #cbd5e1; }
  :global(.fwm-panel__fr) { font-size: 9px; font-weight: 700; padding: 1px 5px; border-radius: 4px; text-transform: uppercase; flex-shrink: 0; }

  /* ====== EVENTS ====== */
  :global(.fwm-ev) { margin-top: 24px; }
  :global(.fwm-ev__lbl) { font-size: 11px; font-weight: 700; color: #64748b; letter-spacing: 2px; text-transform: uppercase; margin-bottom: 8px; }
  :global(.fwm-ev__row) { display: flex; gap: 8px; overflow-x: auto; padding-bottom: 4px; scrollbar-width: none; }
  :global(.fwm-ev__row::-webkit-scrollbar) { display: none; }
  :global(.fwm-ec) {
    display: flex; align-items: center; gap: 6px;
    padding: 6px 12px; background: rgba(234,179,8,0.06);
    border: 1px solid rgba(234,179,8,0.12); border-radius: 8px;
    cursor: pointer; white-space: nowrap; flex-shrink: 0;
    transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-ec:hover) { background: rgba(234,179,8,0.1); border-color: rgba(234,179,8,0.25); }
  :global(.fwm-ec__i) { font-size: 14px; }
  :global(.fwm-ec__n) { font-size: 11px; font-weight: 600; color: #fbbf24; }
  :global(.fwm-ec__s) { font-size: 8px; font-weight: 700; padding: 1px 5px; border-radius: 3px; background: rgba(239,68,68,0.12); color: #ef4444; }
  :global(.fwm-ec__f) { font-size: 10px; color: #64748b; }

  /* ====== MOBILE ====== */
  @media (max-width: 768px) {
    :global(.fwm) { padding: 0 8px 24px; }
    :global(.fwm-frame) { border-radius: 12px; overflow-x: auto; }
    :global(.fwm-ctrls) { flex-direction: column; }
    :global(.fwm-search) { width: 100%; }

    :global(.fwm-btn__n) { font-size: 7px; }
    :global(.fwm-btn__f) { font-size: 6px; }
    :global(.fwm-btn) { min-width: 40px; }

    :global(.fwm-fdot) { width: 22px; height: 22px; margin: -11px 0 0 -11px; }
    :global(.fwm-fdot img) { width: 20px; height: 20px; }
    :global(.fwm-fdot__n) { font-size: 5px; }

    /* Panel slides from bottom on mobile */
    :global(.fwm-panel) {
      width: 100%; height: 70%; top: auto;
      transform: translateY(100%); border-left: none;
      border-top: 1px solid rgba(255,255,255,0.08);
      border-radius: 16px 16px 0 0;
    }
    :global(.fwm-panel--open) { transform: translateY(0); }
    :global(.fwm-panel__hero-wrap) { height: 80px; }
    :global(.fwm-panel__si) { min-height: 44px; }
    :global(.fwm-panel__fi) { min-height: 44px; }
    :global(.fwm-panel__close) { width: 44px; height: 44px; }
    :global(.fwm-ec) { min-height: 44px; }

    :global(.fwm-where__row) { flex-wrap: wrap; }
    :global(.fwm-where__in) { flex: 1; min-width: 50px; }
  }
</style>
