---
import GameLayout from '../../../../layouts/GameLayout.astro';
import FischMap from '../../../../components/FischMap.tsx';
import locationsData from '../../../../data/games/fisch/locations.json';

// Prepare map locations
const mapLocations = (locationsData as any[]).map(loc => ({
  id: loc.id,
  name: loc.name,
  fishCount: loc.fishCount || 0,
  isPremium: loc.isPremium || false,
  isEvent: loc.isEvent || false,
  isSeasonal: loc.isSeasonal || false,
  coords: loc.coords || null,
  imagePath: loc.imagePath || null,
  fish: (loc.fish || []).map((f: any) => ({
    name: f.name,
    rarity: f.rarity,
    id: f.name.toLowerCase().replace(/['']/g, '').replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, ''),
  })),
  availableWeathers: loc.availableWeathers || [],
}));

const withCoords = mapLocations.filter(l => l.coords).length;
const totalFish = mapLocations.reduce((sum, l) => sum + l.fishCount, 0);

const description = `Interactive map of all ${withCoords} Fisch fishing locations. Click any island to see its fish, weather, and rarity breakdown.`;
---

<GameLayout
  title="Interactive Map - All Fishing Locations | Fisch Roblox"
  description={description}
  game="Fisch"
  breadcrumbs={[{ label: 'Map', href: '/games/fisch/map/' }]}
>
  <div class="map-page">
    <div class="map-hero">
      <div class="container">
        <h1 class="map-hero__title">
          <svg class="map-hero__ico" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/>
          </svg>
          INTERACTIVE MAP
        </h1>
        <p class="map-hero__sub">
          {withCoords} locations &bull; {totalFish.toLocaleString('en-US')} fish &bull; Click any island to explore
        </p>
      </div>
    </div>
    <div class="map-wrap container">
      <FischMap
        client:load
        locations={mapLocations}
        gameSlug="fisch"
      />
    </div>
  </div>
</GameLayout>

<style>
  .map-page { display: flex; flex-direction: column; gap: 0.5rem; }
  .map-hero { text-align: center; padding: 0.5rem 0; }
  .map-hero__title {
    display: flex; align-items: center; justify-content: center; gap: 0.5rem;
    font-size: clamp(1.25rem, 3vw, 1.75rem); font-weight: 800; color: #fff;
    letter-spacing: 0.08em; margin: 0;
  }
  .map-hero__ico { width: 28px; height: 28px; color: var(--accent); }
  .map-hero__sub { margin: 0.35rem 0 0; font-size: 0.85rem; color: var(--text-dim); line-height: 1.5; }
  .map-wrap { padding-bottom: 1rem; }

  @media (max-width: 767px) {
    .map-hero { padding: 0.25rem 0; }
    .map-hero__sub { font-size: 0.75rem; }
  }

  /* ================================================
     FischMap component styles (React island)
     ================================================ */

  /* Container */
  :global(.fm) {
    background: #060B18; border-radius: 12px; overflow: hidden;
    border: 1px solid rgba(255,255,255,0.08);
  }

  /* Toolbar */
  :global(.fm-toolbar) {
    display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(255,255,255,0.08);
    background: rgba(15,29,53,0.8); flex-wrap: wrap;
  }
  :global(.fm-search) {
    display: flex; align-items: center; gap: 0.5rem; flex: 1 1 200px; min-width: 160px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    border-radius: 8px; padding: 0.4rem 0.75rem;
  }
  :global(.fm-search__ico) { width: 16px; height: 16px; color: #94A3B8; flex-shrink: 0; }
  :global(.fm-search__input) {
    flex: 1; background: transparent; border: none; outline: none;
    color: #E2E8F0; font-family: Inter, system-ui, sans-serif; font-size: 0.85rem;
  }
  :global(.fm-search__input::placeholder) { color: #64748b; }
  :global(.fm-search__clear) {
    background: none; border: none; color: #94A3B8; cursor: pointer;
    font-size: 1.2rem; line-height: 1; padding: 0;
  }
  :global(.fm-filters) { display: flex; gap: 0.35rem; flex-wrap: wrap; align-items: center; }
  :global(.fm-chip) {
    padding: 0.3rem 0.7rem; border-radius: 9999px;
    border: 1px solid rgba(255,255,255,0.08); background: transparent;
    color: #94A3B8; font-size: 0.75rem; font-weight: 500;
    font-family: Inter, system-ui, sans-serif; cursor: pointer;
    transition: all 0.15s; white-space: nowrap;
  }
  :global(.fm-chip:hover) { border-color: rgba(29,162,216,0.3); color: #CBD5E1; }
  :global(.fm-chip--on) { border-color: #1DA2D8; color: #1DA2D8; background: rgba(29,162,216,0.1); }
  :global(.fm-count) { font-size: 0.7rem; color: #64748b; font-weight: 500; margin-left: 0.25rem; }

  /* Body: map + panel side by side on desktop */
  :global(.fm-body) { display: flex; }

  /* Map wrapper */
  :global(.fm-map-wrap) { flex: 1; min-width: 0; }
  :global(.fm-svg) { width: 100%; height: auto; display: block; }
  :global(.fm-node) { transition: opacity 0.2s; }
  :global(.fm-node:hover) { opacity: 1 !important; }

  /* Panel */
  :global(.fm-panel) {
    width: 340px; flex-shrink: 0; display: flex; flex-direction: column;
    background: #0F1D35; border-left: 1px solid rgba(255,255,255,0.08);
    max-height: 600px; overflow: hidden;
  }
  :global(.fm-panel__head) {
    display: flex; align-items: flex-start; justify-content: space-between;
    padding: 1rem 1rem 0.75rem; border-bottom: 1px solid rgba(255,255,255,0.08);
  }
  :global(.fm-panel__title) { font-size: 1.1rem; font-weight: 700; color: #fff; margin: 0; line-height: 1.3; }
  :global(.fm-panel__meta) { display: flex; align-items: center; gap: 0.4rem; font-size: 0.8rem; color: #94A3B8; margin-top: 4px; }
  :global(.fm-panel__close) {
    display: flex; align-items: center; justify-content: center;
    width: 32px; height: 32px; background: none;
    border: 1px solid rgba(255,255,255,0.08); border-radius: 8px;
    color: #94A3B8; cursor: pointer; font-size: 1.4rem; line-height: 1; flex-shrink: 0;
  }
  :global(.fm-panel__close:hover) { color: #fff; border-color: rgba(255,255,255,0.2); }
  :global(.fm-panel__img) { width: 100%; height: 120px; object-fit: cover; border-bottom: 1px solid rgba(255,255,255,0.08); }
  :global(.fm-panel__weather) {
    display: flex; align-items: center; gap: 0.35rem; padding: 0.5rem 1rem;
    flex-wrap: wrap; border-bottom: 1px solid rgba(255,255,255,0.08);
  }
  :global(.fm-panel__label) { font-size: 0.7rem; font-weight: 600; color: #94A3B8; text-transform: uppercase; letter-spacing: 0.5px; }
  :global(.fm-weather-chip) {
    font-size: 0.7rem; font-weight: 500; padding: 2px 8px; border-radius: 4px;
    background: rgba(29,162,216,0.1); color: #1DA2D8; border: 1px solid rgba(29,162,216,0.2);
  }
  :global(.fm-panel__rchips) {
    display: flex; gap: 0.25rem; padding: 0.5rem 1rem; flex-wrap: wrap;
    border-bottom: 1px solid rgba(255,255,255,0.08);
  }
  :global(.fm-rchip) {
    font-size: 0.65rem; font-weight: 600; padding: 2px 8px; border-radius: 9999px;
    background: transparent; border: 1px solid rgba(255,255,255,0.08);
    color: #94A3B8; cursor: pointer; font-family: Inter, system-ui, sans-serif; white-space: nowrap;
  }
  :global(.fm-panel__fish) { flex: 1; overflow-y: auto; padding: 0.5rem; }
  :global(.fm-panel__empty) { text-align: center; padding: 2rem 1rem; color: #64748b; font-size: 0.85rem; }

  :global(.fm-fish) {
    display: flex; align-items: center; gap: 0.5rem; padding: 0.35rem 0.6rem;
    border-radius: 6px; text-decoration: none; color: #E2E8F0; font-size: 0.82rem;
    transition: background 0.1s;
  }
  :global(.fm-fish:hover) { background: rgba(29,162,216,0.08); }
  :global(.fm-fish__dot) { width: 8px; height: 8px; border-radius: 50%; flex-shrink: 0; }
  :global(.fm-fish__name) { flex: 1; font-weight: 500; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
  :global(.fm-fish__rarity) { font-size: 0.7rem; font-weight: 600; flex-shrink: 0; }

  :global(.fm-panel__viewall) {
    display: block; padding: 0.75rem 1rem; text-align: center;
    color: #1DA2D8; font-size: 0.8rem; font-weight: 600;
    border-top: 1px solid rgba(255,255,255,0.08); text-decoration: none;
  }
  :global(.fm-panel__viewall:hover) { background: rgba(29,162,216,0.06); }

  /* Badges */
  :global(.fm-badge) { font-size: 0.6rem; font-weight: 600; padding: 1px 5px; border-radius: 4px; }
  :global(.fm-badge--premium) { background: rgba(249,115,22,0.15); color: #F97316; border: 1px solid rgba(249,115,22,0.3); }
  :global(.fm-badge--event) { background: rgba(168,85,247,0.15); color: #a855f7; border: 1px solid rgba(168,85,247,0.3); }
  :global(.fm-badge--seasonal) { background: rgba(34,211,238,0.15); color: #22D3EE; border: 1px solid rgba(34,211,238,0.3); }

  /* ---- Mobile: panel below map ---- */
  @media (max-width: 767px) {
    :global(.fm-body) { flex-direction: column; }
    :global(.fm-panel) {
      width: 100%; max-height: 50vh; border-left: none;
      border-top: 1px solid rgba(255,255,255,0.12);
    }
    :global(.fm-panel__img) { height: 100px; }
    :global(.fm-toolbar) { gap: 0.5rem; padding: 0.6rem 0.75rem; }
    :global(.fm-search) { flex: 1 1 100%; }
  }
</style>
