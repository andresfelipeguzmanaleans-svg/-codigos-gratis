---
import GameLayout from '../../../../layouts/GameLayout.astro';
import FischWorldMap from '../../../../components/FischWorldMap.tsx';
import locationsData from '../../../../data/games/fisch/locations.json';

const mapLocations = (locationsData as any[]).map(loc => ({
  id: loc.id,
  name: loc.name,
  fishCount: loc.fishCount || 0,
  isPremium: loc.isPremium || false,
  isEvent: loc.isEvent || false,
  isSeasonal: loc.isSeasonal || false,
  coords: loc.coords || null,
  imagePath: loc.imagePath || null,
  fish: (loc.fish || []).map((f: any) => ({
    name: f.name,
    rarity: f.rarity,
    id: f.name.toLowerCase().replace(/['']/g, '').replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, ''),
  })),
  availableWeathers: loc.availableWeathers || [],
}));

const totalFish = mapLocations.reduce((s: number, l: any) => s + l.fishCount, 0);
const description = `Interactive 3-level drill-down map of all Fisch fishing locations. Click islands to explore sub-zones and discover ${totalFish} fish.`;
---

<GameLayout
  title="Interactive Map - All Fishing Locations | Fisch Roblox"
  description={description}
  game="Fisch"
  breadcrumbs={[{ label: 'Map', href: '/games/fisch/map/' }]}
>
  <div class="map-page">
    <div class="map-hero">
      <h1 class="mh-t">üó∫Ô∏è <span class="mh-a">INTERACTIVE</span> MAP</h1>
      <p class="mh-s">26 locations &bull; {totalFish.toLocaleString('en-US')} fish &bull; Click any island to explore</p>
    </div>
    <FischWorldMap client:load locations={mapLocations} gameSlug="fisch"/>
  </div>
</GameLayout>

<style>
  .map-page { display: flex; flex-direction: column; }
  .map-hero { text-align: center; padding: 24px 20px 12px; }
  .mh-t { font-size: 24px; font-weight: 800; letter-spacing: 2px; color: #fff; margin: 0; }
  .mh-a { color: #22d3ee; }
  .mh-s { color: #64748b; font-size: 13px; margin-top: 4px; }
  @media (max-width: 767px) {
    .map-hero { padding: 16px 16px 8px; }
    .mh-t { font-size: 20px; }
    .mh-s { font-size: 12px; }
  }

  /* ====== ROOT ====== */
  :global(.fwm) { max-width: 1100px; margin: 0 auto; padding: 0 16px 40px; }

  /* ====== CONTROLS ====== */
  :global(.fwm-ctrls) { display: flex; gap: 8px; align-items: center; flex-wrap: wrap; margin-bottom: 12px; }
  :global(.fwm-search) {
    flex: 1; min-width: 180px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px; padding: 9px 14px;
    color: #e2e8f0; font-size: 13px; font-family: inherit; outline: none;
    transition: border-color 0.2s;
  }
  :global(.fwm-search:focus) { border-color: #22d3ee; }
  :global(.fwm-search::placeholder) { color: #475569; }
  :global(.fwm-pills) { display: flex; gap: 6px; }
  :global(.fwm-pill) {
    padding: 6px 14px; border-radius: 20px; font-size: 12px; font-weight: 600;
    border: 1px solid rgba(255,255,255,0.1); background: transparent;
    color: #94a3b8; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-pill:hover) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-pill--on) { background: #22d3ee; color: #080e1a; border-color: #22d3ee; }

  /* ====== BREADCRUMB ====== */
  :global(.fwm-bread) { display: flex; align-items: center; gap: 6px; font-size: 12px; min-height: 24px; margin-bottom: 8px; }
  :global(.fwm-bread__a) { color: #22d3ee; cursor: pointer; font-weight: 600; }
  :global(.fwm-bread__a:hover) { text-decoration: underline; }
  :global(.fwm-bread__s) { color: #475569; }
  :global(.fwm-bread__c) { color: #e2e8f0; font-weight: 600; }

  /* ====== MAP FRAME ====== */
  :global(.fwm-frame) {
    position: relative; width: 100%; aspect-ratio: 16 / 9;
    border-radius: 16px; border: 2px solid rgba(255,255,255,0.08);
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.04);
  }

  /* ====== BACK BUTTON ====== */
  :global(.fwm-back) {
    position: absolute; top: 12px; left: 12px; z-index: 20;
    display: inline-flex; align-items: center; gap: 4px;
    padding: 8px 14px; border-radius: 10px;
    background: rgba(0,0,0,0.6); backdrop-filter: blur(8px);
    border: 1px solid rgba(255,255,255,0.1);
    color: #22d3ee; font-size: 13px; font-weight: 700;
    cursor: pointer; font-family: inherit; transition: all 0.2s; min-height: 44px;
  }
  :global(.fwm-back:hover) { background: rgba(0,0,0,0.75); border-color: #22d3ee; }
  :global(.fwm-back svg) { flex-shrink: 0; }

  /* ====== LEVEL 1: WORLD MAP ====== */
  :global(.fwm-world) {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, #546478 0%, #4f5f72 25%, #4a5a6d 50%, #435267 75%, #3c4b5e 100%);
    transition: opacity 0.4s, transform 0.4s;
  }
  :global(.fwm-world::before) {
    content: ''; position: absolute; inset: 0; pointer-events: none;
    background:
      radial-gradient(ellipse 90% 60% at 25% 30%, rgba(80,160,200,0.06) 0%, transparent 60%),
      radial-gradient(ellipse 70% 50% at 75% 65%, rgba(60,100,150,0.05) 0%, transparent 60%),
      radial-gradient(ellipse 40% 30% at 50% 50%, rgba(100,180,220,0.03) 0%, transparent 50%);
  }
  :global(.fwm-world--out) { opacity: 0; pointer-events: none; transform: scale(1.1); }

  :global(.fwm-grid) {
    position: absolute; inset: 0; opacity: 0.04; pointer-events: none;
    background-image:
      linear-gradient(rgba(255,255,255,0.4) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.4) 1px, transparent 1px);
    background-size: 80px 80px;
  }
  :global(.fwm-waves) {
    position: absolute; inset: 0; width: 100%; height: 100%;
    pointer-events: none; z-index: 1;
  }
  :global(.fwm-rl) {
    position: absolute; font-size: 12px; font-weight: 800;
    letter-spacing: 5px; text-transform: uppercase; pointer-events: none; opacity: 0.15; z-index: 1;
  }
  :global(.fwm-rl--1) { top: 1%; left: 50%; transform: translateX(-50%); color: #7dd3fc; }
  :global(.fwm-compass) {
    position: absolute; top: 10px; right: 10px;
    pointer-events: none; z-index: 5;
    filter: drop-shadow(0 2px 4px rgba(0,0,0,0.4));
  }

  /* GPS coordinate grid */
  :global(.fwm-gps-grid) {
    position: absolute; inset: 0; width: 100%; height: 100%;
    pointer-events: none; z-index: 0;
  }
  :global(.fwm-axis) { position: absolute; pointer-events: none; z-index: 1; }
  :global(.fwm-axis--x) {
    bottom: 0; left: 0; right: 0; height: 18px;
    background: linear-gradient(to top, rgba(0,0,0,0.3), transparent);
  }
  :global(.fwm-axis--x span) {
    position: absolute; bottom: 2px; transform: translateX(-50%);
    font-size: 8px; font-weight: 600; color: rgba(255,255,255,0.2);
    font-family: monospace; white-space: nowrap;
  }
  :global(.fwm-axis--z) {
    top: 0; left: 0; bottom: 0; width: 36px;
    background: linear-gradient(to right, rgba(0,0,0,0.3), transparent);
  }
  :global(.fwm-axis--z span) {
    position: absolute; left: 2px; transform: translateY(-50%);
    font-size: 8px; font-weight: 600; color: rgba(255,255,255,0.2);
    font-family: monospace; white-space: nowrap;
  }

  /* ====== SEA DIVIDER ====== */
  :global(.fwm-sea-div) {
    position: absolute; left: 5%; right: 5%;
    border-top: 1px dashed rgba(196,181,253,0.25);
    display: flex; justify-content: center;
    z-index: 1; pointer-events: none;
  }
  :global(.fwm-sea-div span) {
    position: relative; top: -8px;
    background: linear-gradient(90deg, transparent, rgba(76,61,128,0.5), transparent);
    padding: 2px 24px;
    font-size: 10px; font-weight: 700; color: rgba(196,181,253,0.5);
    letter-spacing: 5px; text-transform: uppercase;
  }

  /* ====== WHERE AM I? ====== */
  :global(.fwm-where) {
    display: flex; align-items: center; gap: 8px; flex-wrap: wrap;
    margin-bottom: 8px; padding: 8px 12px;
    background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.06);
    border-radius: 10px;
  }
  :global(.fwm-where__lbl) { font-size: 12px; font-weight: 700; color: #94a3b8; white-space: nowrap; }
  :global(.fwm-where__row) { display: flex; gap: 6px; align-items: center; flex: 1; min-width: 0; }
  :global(.fwm-where__in) {
    width: 70px; padding: 6px 8px; border-radius: 8px;
    background: rgba(255,255,255,0.06); border: 1px solid rgba(255,255,255,0.1);
    color: #e2e8f0; font-size: 13px; font-family: monospace; outline: none;
    transition: border-color 0.2s; min-height: 36px;
  }
  :global(.fwm-where__in:focus) { border-color: #22d3ee; }
  :global(.fwm-where__in::placeholder) { color: #475569; }
  :global(.fwm-where__in--y) { opacity: 0.5; width: 55px; }
  :global(.fwm-where__btn) {
    padding: 6px 14px; border-radius: 8px; min-height: 36px;
    background: #22d3ee; color: #080e1a; font-weight: 700;
    font-size: 12px; border: none; cursor: pointer;
    font-family: inherit; transition: all 0.2s; white-space: nowrap;
  }
  :global(.fwm-where__btn:hover) { background: #67e8f9; }
  :global(.fwm-where__clr) {
    width: 28px; height: 28px; border-radius: 50%;
    background: rgba(239,68,68,0.15); border: 1px solid rgba(239,68,68,0.3);
    color: #ef4444; font-size: 12px; cursor: pointer;
    display: flex; align-items: center; justify-content: center;
    font-family: inherit; transition: all 0.2s;
  }
  :global(.fwm-where__clr:hover) { background: rgba(239,68,68,0.25); }

  /* ====== MARKER ====== */
  :global(.fwm-marker) {
    position: absolute; transform: translate(-50%, -50%); z-index: 20;
    pointer-events: none;
  }
  :global(.fwm-marker__dot) {
    width: 18px; height: 18px; border-radius: 50%;
    background: #ef4444; border: 3px solid #fff;
    box-shadow: 0 0 0 4px rgba(239,68,68,0.3);
    animation: fwm-pulse 1.5s ease-in-out infinite;
  }
  @keyframes fwm-pulse {
    0%, 100% { box-shadow: 0 0 0 4px rgba(239,68,68,0.3); }
    50% { box-shadow: 0 0 0 14px rgba(239,68,68,0.08); }
  }
  :global(.fwm-marker__tip) {
    position: absolute; bottom: calc(100% + 10px); left: 50%; transform: translateX(-50%);
    background: rgba(0,0,0,0.88); backdrop-filter: blur(8px);
    padding: 8px 14px; border-radius: 10px;
    font-size: 11px; color: #e2e8f0; white-space: nowrap; line-height: 1.5;
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow: 0 4px 16px rgba(0,0,0,0.4);
  }

  /* ====== ISLAND NODES ====== */
  :global(.fwm-isle) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; aspect-ratio: 1;
    transform: translate(-50%, -50%);
    transition: transform 0.25s ease, opacity 0.2s, filter 0.25s ease;
    filter: drop-shadow(0 4px 12px rgba(0,0,0,0.6));
  }
  :global(.fwm-isle--lg) { width: 12%; z-index: 3; }
  :global(.fwm-isle--md) { width: 9%; z-index: 3; }
  :global(.fwm-isle--sm) { width: 6%; z-index: 2; }
  :global(.fwm-isle:hover) {
    transform: translate(-50%, -50%) scale(1.1) translateY(-3px);
    z-index: 10;
    filter: drop-shadow(0 0 16px rgba(34,211,238,0.5)) drop-shadow(0 4px 8px rgba(0,0,0,0.4));
  }
  :global(.fwm-isle__svg) {
    width: 100%; height: 100%; display: block;
    filter: brightness(0.85);
    transition: filter 0.25s ease;
  }
  :global(.fwm-isle:hover .fwm-isle__svg) {
    filter: brightness(1.15);
  }
  :global(.fwm-isle:hover .fwm-isle__ov) {
    opacity: 0 !important;
  }
  :global(.fwm-isle__n) {
    margin-top: 3px; font-size: 9px; font-weight: 700;
    text-shadow: 0 1px 4px rgba(0,0,0,0.95), 0 0 8px rgba(0,0,0,0.6);
    white-space: nowrap; letter-spacing: 0.3px;
    transition: color 0.2s, font-size 0.2s;
  }
  :global(.fwm-isle:hover .fwm-isle__n) { color: #fff !important; font-size: 11px; }
  :global(.fwm-isle__f) {
    font-size: 8px; font-weight: 700; color: #e2e8f0;
    background: rgba(0,0,0,0.5); padding: 1px 6px; border-radius: 6px; margin-top: 1px;
  }

  /* ====== WATER ZONES ‚Äî pointer-events:none so islands always clickable ====== */
  :global(.fwm-zone) {
    position: absolute; transform: translate(-50%, -50%);
    border: 1.5px dashed rgba(34,211,238,0.2);
    border-radius: 50%;
    background: none;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    pointer-events: none; z-index: 0;
    transition: border-color 0.25s ease;
  }
  :global(.fwm-zone--lg) { width: 14%; aspect-ratio: 1.4; }
  :global(.fwm-zone--md) { width: 10%; aspect-ratio: 1.3; }
  :global(.fwm-zone--sm) { width: 7%; aspect-ratio: 1.2; }
  :global(.fwm-zone__lbl) {
    pointer-events: auto; cursor: pointer;
    display: flex; flex-direction: column; align-items: center;
    padding: 4px 8px; border-radius: 8px;
    transition: background 0.2s;
  }
  :global(.fwm-zone__lbl:hover) {
    background: rgba(34,211,238,0.1);
  }
  :global(.fwm-zone__n) {
    font-size: 9px; font-weight: 700; color: rgba(34,211,238,0.5);
    white-space: nowrap; text-shadow: 0 1px 4px rgba(0,0,0,0.8);
  }
  :global(.fwm-zone__lbl:hover .fwm-zone__n) { color: rgba(34,211,238,0.85); }
  :global(.fwm-zone__f) {
    font-size: 7px; color: rgba(34,211,238,0.35); margin-top: 1px;
  }

  /* ====== SPECIAL LOCATIONS ‚Äî z-index below islands ====== */
  :global(.fwm-spec) {
    position: absolute; transform: translate(-50%, -50%);
    display: flex; flex-direction: column; align-items: center;
    cursor: pointer; z-index: 1;
    transition: transform 0.25s ease, opacity 0.2s;
  }
  :global(.fwm-spec:hover) { transform: translate(-50%, -50%) scale(1.15); z-index: 10; }
  :global(.fwm-spec__i) {
    width: 26px; height: 26px; border-radius: 50%;
    background: rgba(0,0,0,0.45); border: 1.5px solid rgba(255,255,255,0.15);
    display: flex; align-items: center; justify-content: center;
    font-size: 12px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.4);
    transition: all 0.2s;
  }
  :global(.fwm-spec:hover .fwm-spec__i) { border-color: #22d3ee; box-shadow: 0 0 10px rgba(34,211,238,0.3); }
  :global(.fwm-spec__n) {
    font-size: 7px; font-weight: 600; color: rgba(255,255,255,0.5);
    white-space: nowrap; margin-top: 2px; text-shadow: 0 1px 3px rgba(0,0,0,0.9);
  }
  :global(.fwm-spec:hover .fwm-spec__n) { color: #22d3ee; }
  :global(.fwm-spec__f) { font-size: 7px; color: rgba(34,211,238,0.4); }

  /* Biome bg */
  :global(.fwm-b--tropical) { background: linear-gradient(135deg, #065f46, #059669); }
  :global(.fwm-b--volcanic) { background: linear-gradient(135deg, #7f1d1d, #dc2626); }
  :global(.fwm-b--snow) { background: linear-gradient(135deg, #cbd5e1, #94a3b8); }
  :global(.fwm-b--swamp) { background: linear-gradient(135deg, #365314, #4d7c0f); }
  :global(.fwm-b--dark) { background: linear-gradient(135deg, #1e1b4b, #4338ca); }
  :global(.fwm-b--sand) { background: linear-gradient(135deg, #92400e, #d97706); }
  :global(.fwm-b--ocean) { background: linear-gradient(135deg, #0c4a6e, #0284c7); }
  :global(.fwm-b--mystic) { background: linear-gradient(135deg, #581c87, #9333ea); }

  /* ====== LEVEL 2+3: ISLAND DETAIL ====== */
  :global(.fwm-det) {
    position: absolute; inset: 0; display: flex;
    transition: opacity 0.4s, transform 0.4s;
    opacity: 0; pointer-events: none; transform: scale(0.95);
  }
  :global(.fwm-det--on) { opacity: 1; pointer-events: all; transform: scale(1); }

  /* ====== BALLOON AERIAL BACKGROUND ====== */
  :global(.fwm-balloon) {
    position: absolute; inset: 0; width: 100%; height: 100%;
    object-fit: cover; z-index: 0; pointer-events: none;
  }
  :global(.fwm-balloon-ov) {
    position: absolute; inset: 0; z-index: 1; pointer-events: none;
    background: rgba(0,0,0,0.3);
  }

  /* ====== MINIMAP (left) ====== */
  :global(.fwm-mm) { flex: 1; position: relative; overflow: visible; cursor: default; z-index: 2; }
  :global(.fwm-mm__bg) { position: absolute; inset: 0; }
  :global(.fwm-sil) {
    position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);
    width: 70%; max-width: 400px; pointer-events: none;
    filter: drop-shadow(0 0 30px rgba(34,211,238,0.08));
  }

  /* ====== SUB-ZONE IMAGE CIRCLES (Level 2) ====== */
  :global(.fwm-sub) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; z-index: 2;
    transform: translate(-50%, -50%);
    /* Smooth centering transition for Level 3 */
    transition: left 0.4s ease, top 0.4s ease, opacity 0.35s, transform 0.25s;
  }
  :global(.fwm-sub:hover) { transform: translate(-50%,-50%) scale(1.15); z-index: 10; }
  :global(.fwm-sub--on) { z-index: 5; }
  /* When active in Level 3: larger circle */
  :global(.fwm-sub--on .fwm-sub__w) {
    width: 72px !important; height: 72px !important;
    border-color: #22d3ee;
    box-shadow: 0 0 28px rgba(34,211,238,0.5);
    animation: fwm-glow 2s ease-in-out infinite;
  }
  @keyframes fwm-glow {
    0%,100% { box-shadow: 0 0 24px rgba(34,211,238,0.4); }
    50% { box-shadow: 0 0 36px rgba(34,211,238,0.6); }
  }

  :global(.fwm-sub__w) {
    border-radius: 50%; overflow: hidden;
    border: 2px solid rgba(255,255,255,0.15);
    box-shadow: 0 0 12px rgba(0,0,0,0.5);
    transition: all 0.3s; display: flex; align-items: center; justify-content: center;
  }
  :global(.fwm-sub:hover .fwm-sub__w) { border-color: #22d3ee; box-shadow: 0 0 20px rgba(34,211,238,0.35); }

  /* Sub-zone sizes */
  :global(.fwm-sub--xl .fwm-sub__w) { width: 56px; height: 56px; }
  :global(.fwm-sub--lg .fwm-sub__w) { width: 48px; height: 48px; }
  :global(.fwm-sub--md .fwm-sub__w) { width: 40px; height: 40px; }
  :global(.fwm-sub--sm .fwm-sub__w) { width: 34px; height: 34px; }

  :global(.fwm-sub__img) { width: 100%; height: 100%; object-fit: cover; border-radius: 50%; }
  :global(.fwm-sub__ph) { width: 100%; height: 100%; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 16px; }

  :global(.fwm-sub__n) {
    margin-top: 3px; font-size: 9px; font-weight: 600;
    color: rgba(255,255,255,0.7); text-shadow: 0 1px 4px rgba(0,0,0,0.9);
    white-space: nowrap; transition: color 0.2s;
  }
  :global(.fwm-sub:hover .fwm-sub__n) { color: #22d3ee; }
  :global(.fwm-sub--on .fwm-sub__n) { color: #22d3ee; font-size: 10px; }
  :global(.fwm-sub__f) {
    font-size: 8px; font-weight: 700; color: #22d3ee;
    background: rgba(34,211,238,0.12); padding: 1px 5px; border-radius: 6px; margin-top: 1px;
  }

  /* ====== FISH ORBIT (Level 3) ====== */
  :global(.fwm-orb) { position: absolute; z-index: 4; transform: translate(-50%,-50%); }
  :global(.fwm-of) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; transition: transform 0.2s;
    animation: fwm-fin 0.3s ease backwards; text-decoration: none; color: inherit;
  }
  :global(.fwm-of:hover) { transform: scale(1.15); z-index: 10; }
  :global(.fwm-of__img) {
    width: 52px; height: 52px; border-radius: 10px; overflow: hidden;
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 2px 12px rgba(0,0,0,0.5);
    display: flex; align-items: center; justify-content: center; transition: all 0.2s;
  }
  :global(.fwm-of:hover .fwm-of__img) { border-color: #22d3ee; box-shadow: 0 0 16px rgba(34,211,238,0.3); }
  :global(.fwm-of__img img) { width: 80%; height: 80%; object-fit: contain; filter: drop-shadow(0 1px 3px rgba(0,0,0,0.5)); }
  :global(.fwm-of__n) {
    margin-top: 2px; font-size: 8px; font-weight: 600;
    color: rgba(255,255,255,0.8); text-shadow: 0 1px 3px rgba(0,0,0,0.9);
    white-space: nowrap; max-width: 70px; overflow: hidden; text-overflow: ellipsis; text-align: center;
  }
  :global(.fwm-of__r) { font-size: 7px; font-weight: 700; padding: 0 4px; border-radius: 3px; margin-top: 1px; text-transform: uppercase; }
  :global(.fwm-of__more) {
    position: absolute; left: 50%; bottom: -55px; transform: translateX(-50%);
    padding: 4px 12px; border-radius: 12px;
    background: rgba(34,211,238,0.15); border: 1px solid rgba(34,211,238,0.3);
    color: #22d3ee; font-size: 11px; font-weight: 700;
