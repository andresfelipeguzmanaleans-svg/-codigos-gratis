---
import GameLayout from '../../../../layouts/GameLayout.astro';
import FischWorldMap from '../../../../components/FischWorldMap.tsx';
import locationsData from '../../../../data/games/fisch/locations.json';

const mapLocations = (locationsData as any[]).map(loc => ({
  id: loc.id,
  name: loc.name,
  fishCount: loc.fishCount || 0,
  isPremium: loc.isPremium || false,
  isEvent: loc.isEvent || false,
  isSeasonal: loc.isSeasonal || false,
  coords: loc.coords || null,
  imagePath: loc.imagePath || null,
  fish: (loc.fish || []).map((f: any) => ({
    name: f.name,
    rarity: f.rarity,
    id: f.name.toLowerCase().replace(/['']/g, '').replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, ''),
  })),
  availableWeathers: loc.availableWeathers || [],
}));

const totalLocations = mapLocations.length;
const totalFish = mapLocations.reduce((sum: number, l: any) => sum + l.fishCount, 0);
const description = `Interactive map of all ${totalLocations} Fisch fishing locations grouped into 20 regions. Click any island to see its fish, weather, and rarity breakdown.`;
---

<GameLayout
  title="Interactive Map - All Fishing Locations | Fisch Roblox"
  description={description}
  game="Fisch"
  breadcrumbs={[{ label: 'Map', href: '/games/fisch/map/' }]}
>
  <div class="map-page">
    <div class="map-hero">
      <h1 class="map-hero__title">üó∫Ô∏è <span class="map-hero__accent">INTERACTIVE</span> MAP</h1>
      <p class="map-hero__sub">20 regions &bull; {totalFish.toLocaleString('en-US')} fish &bull; Click any island to explore</p>
    </div>
    <div class="map-wrap">
      <FischWorldMap client:load locations={mapLocations} gameSlug="fisch"/>
    </div>
  </div>
</GameLayout>

<style>
  .map-page { display: flex; flex-direction: column; }
  .map-hero { text-align: center; padding: 24px 20px 12px; }
  .map-hero__title {
    font-size: 28px; font-weight: 800; letter-spacing: 2px; color: #fff; margin: 0;
  }
  .map-hero__accent { color: #22d3ee; }
  .map-hero__sub { color: #64748b; font-size: 14px; margin-top: 6px; }

  @media (max-width: 767px) {
    .map-hero { padding: 16px 16px 8px; }
    .map-hero__title { font-size: 22px; }
    .map-hero__sub { font-size: 12px; }
  }

  /* ================================================
     FischWorldMap ‚Äî matches mockup exactly
     ================================================ */

  :global(.fwm) { max-width: 1100px; margin: 0 auto; padding: 0 16px 40px; }

  /* Controls */
  :global(.fwm-controls) {
    display: flex; gap: 10px; align-items: center; flex-wrap: wrap;
    margin-bottom: 16px;
  }
  :global(.fwm-search) {
    flex: 1; min-width: 200px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px; padding: 10px 14px;
    color: #e2e8f0; font-size: 14px; font-family: inherit; outline: none;
    transition: border-color 0.2s;
  }
  :global(.fwm-search:focus) { border-color: #22d3ee; }
  :global(.fwm-search::placeholder) { color: #475569; }
  :global(.fwm-pills) { display: flex; gap: 6px; }
  :global(.fwm-pill) {
    padding: 7px 16px; border-radius: 20px; font-size: 13px; font-weight: 600;
    border: 1px solid rgba(255,255,255,0.1); background: transparent;
    color: #94a3b8; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-pill:hover) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-pill--on) { background: #22d3ee; color: #080e1a; border-color: #22d3ee; }

  /* Ocean Map */
  :global(.fwm-ocean) {
    position: relative; width: 100%; aspect-ratio: 16 / 9;
    background: linear-gradient(180deg, #0a1e3d 0%, #0c2748 30%, #0a1f3a 60%, #081628 100%);
    border-radius: 16px; border: 1px solid rgba(34,211,238,0.1);
    overflow: hidden;
  }
  :global(.fwm-ocean::before) {
    content: ''; position: absolute; inset: 0; pointer-events: none;
    background:
      radial-gradient(ellipse 80% 50% at 30% 40%, rgba(34,211,238,0.03) 0%, transparent 70%),
      radial-gradient(ellipse 60% 40% at 70% 60%, rgba(99,102,241,0.03) 0%, transparent 70%);
  }
  :global(.fwm-grid) {
    position: absolute; inset: 0; opacity: 0.04; pointer-events: none;
    background-image:
      linear-gradient(rgba(255,255,255,0.5) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.5) 1px, transparent 1px);
    background-size: 80px 80px;
  }
  :global(.fwm-wave1), :global(.fwm-wave2) {
    position: absolute; width: 200%; height: 100px; opacity: 0.015; pointer-events: none;
  }
  :global(.fwm-wave1) {
    bottom: 20%; transform: rotate(-2deg);
    background: repeating-linear-gradient(90deg, transparent, transparent 40px, rgba(34,211,238,1) 40px, rgba(34,211,238,1) 42px);
  }
  :global(.fwm-wave2) {
    bottom: 40%; transform: rotate(1deg);
    background: repeating-linear-gradient(90deg, transparent, transparent 60px, rgba(99,102,241,1) 60px, rgba(99,102,241,1) 62px);
  }
  :global(.fwm-region) {
    position: absolute; font-size: 11px; font-weight: 700;
    letter-spacing: 4px; text-transform: uppercase; pointer-events: none; opacity: 0.12;
  }
  :global(.fwm-region--first) { top: 12%; left: 50%; transform: translateX(-50%); color: #22d3ee; font-size: 13px; }
  :global(.fwm-region--second) { bottom: 10%; left: 50%; transform: translateX(-50%); color: #a78bfa; }
  :global(.fwm-compass) {
    position: absolute; top: 16px; right: 16px; width: 50px; height: 50px;
    border-radius: 50%; border: 1px solid rgba(255,255,255,0.08);
    background: rgba(0,0,0,0.3); display: flex; align-items: center;
    justify-content: center; pointer-events: none;
  }
  :global(.fwm-compass::before) {
    content: 'N'; position: absolute; top: 4px; color: #ef4444; font-size: 10px; font-weight: 700;
  }
  :global(.fwm-compass::after) {
    content: ''; width: 1px; height: 20px; position: absolute;
    background: linear-gradient(#ef4444, rgba(255,255,255,0.15));
  }

  /* Island nodes */
  :global(.fwm-isle) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; transition: transform 0.25s ease, opacity 0.2s; z-index: 2;
    transform: translate(-50%, -50%);
  }
  :global(.fwm-isle:hover) { transform: translate(-50%, -50%) scale(1.12); z-index: 10; }
  :global(.fwm-isle--sel) { z-index: 10; }
  :global(.fwm-isle__circle) {
    width: 56px; height: 56px; border-radius: 50%;
    border: 2px solid rgba(255,255,255,0.15); overflow: hidden;
    position: relative; transition: all 0.3s;
    box-shadow: 0 0 12px rgba(0,0,0,0.5);
  }
  :global(.fwm-isle:hover .fwm-isle__circle) {
    border-color: #22d3ee; box-shadow: 0 0 20px rgba(34,211,238,0.3);
  }
  :global(.fwm-isle--sel .fwm-isle__circle) {
    border-color: #22d3ee; box-shadow: 0 0 24px rgba(34,211,238,0.4);
    animation: fwm-pulse 2s ease-in-out infinite;
  }
  @keyframes fwm-pulse {
    0%, 100% { box-shadow: 0 0 20px rgba(34,211,238,0.3); }
    50% { box-shadow: 0 0 30px rgba(34,211,238,0.5); }
  }
  :global(.fwm-isle__img) { width: 100%; height: 100%; object-fit: cover; border-radius: 50%; }
  :global(.fwm-isle__ph) {
    width: 100%; height: 100%; border-radius: 50%;
    display: flex; align-items: center; justify-content: center; font-size: 20px;
  }
  :global(.fwm-isle__name) {
    margin-top: 4px; font-size: 10px; font-weight: 600;
    color: rgba(255,255,255,0.75); text-shadow: 0 1px 4px rgba(0,0,0,0.8);
    white-space: nowrap; text-align: center; max-width: 90px;
    overflow: hidden; text-overflow: ellipsis; transition: color 0.2s;
  }
  :global(.fwm-isle:hover .fwm-isle__name) { color: #22d3ee; }
  :global(.fwm-isle--sel .fwm-isle__name) { color: #22d3ee; }
  :global(.fwm-isle__badge) {
    margin-top: 2px; font-size: 9px; font-weight: 600; color: #22d3ee;
    background: rgba(34,211,238,0.1); padding: 1px 6px; border-radius: 8px;
    border: 1px solid rgba(34,211,238,0.2);
  }

  /* Size variants */
  :global(.fwm-isle--small .fwm-isle__circle) { width: 42px; height: 42px; }
  :global(.fwm-isle--small .fwm-isle__name) { font-size: 9px; }
  :global(.fwm-isle--large .fwm-isle__circle) { width: 68px; height: 68px; }

  /* Rarity glow */
  :global(.fwm-glow--mythical .fwm-isle__circle) { border-color: rgba(239,68,68,0.5); }
  :global(.fwm-glow--legendary .fwm-isle__circle) { border-color: rgba(249,115,22,0.4); }
  :global(.fwm-glow--exotic .fwm-isle__circle) { border-color: rgba(168,85,247,0.4); }
  :global(.fwm-glow--rare .fwm-isle__circle) { border-color: rgba(59,130,246,0.3); }

  /* Biome placeholder colors */
  :global(.fwm-biome--tropical) { background: linear-gradient(135deg, #065f46, #059669); }
  :global(.fwm-biome--volcanic) { background: linear-gradient(135deg, #7f1d1d, #dc2626); }
  :global(.fwm-biome--snow) { background: linear-gradient(135deg, #e2e8f0, #94a3b8); }
  :global(.fwm-biome--swamp) { background: linear-gradient(135deg, #365314, #4d7c0f); }
  :global(.fwm-biome--dark) { background: linear-gradient(135deg, #1e1b4b, #4338ca); }
  :global(.fwm-biome--sand) { background: linear-gradient(135deg, #92400e, #d97706); }
  :global(.fwm-biome--ocean) { background: linear-gradient(135deg, #0c4a6e, #0284c7); }
  :global(.fwm-biome--mystic) { background: linear-gradient(135deg, #581c87, #9333ea); }

  /* ===== DETAIL PANEL ===== */
  :global(.fwm-detail) { margin-top: 16px; animation: fwm-slideup 0.3s ease; }
  @keyframes fwm-slideup {
    from { opacity: 0; transform: translateY(12px); }
    to { opacity: 1; transform: translateY(0); }
  }
  :global(.fwm-card) {
    background: linear-gradient(135deg, rgba(15,23,42,0.95), rgba(15,23,42,0.98));
    border: 1px solid rgba(34,211,238,0.15); border-radius: 16px; overflow: hidden;
  }
  :global(.fwm-card__head) {
    display: flex; align-items: center; gap: 16px; padding: 20px 24px;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  :global(.fwm-card__thumb) {
    width: 56px; height: 56px; border-radius: 12px; object-fit: cover;
    border: 1px solid rgba(255,255,255,0.1); flex-shrink: 0;
  }
  :global(.fwm-card__info) { flex: 1; min-width: 0; }
  :global(.fwm-card__title) { font-size: 22px; font-weight: 700; color: #fff; margin: 0; }
  :global(.fwm-card__meta) { display: flex; gap: 10px; margin-top: 4px; flex-wrap: wrap; align-items: center; }
  :global(.fwm-card__meta span) { font-size: 12px; color: #64748b; }
  :global(.fwm-card__fc) { color: #22d3ee !important; font-weight: 600; }
  :global(.fwm-card__coords) { font-family: monospace; font-size: 11px !important; }
  :global(.fwm-card__close) {
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1);
    color: #94a3b8; width: 32px; height: 32px; border-radius: 8px;
    display: flex; align-items: center; justify-content: center;
    cursor: pointer; font-size: 16px; font-family: inherit; transition: all 0.2s; flex-shrink: 0;
  }
  :global(.fwm-card__close:hover) { background: rgba(255,255,255,0.1); color: #fff; }

  /* Content layout: minimap left + fish right */
  :global(.fwm-card__content) { display: flex; }
  :global(.fwm-card__left) {
    width: 300px; flex-shrink: 0; border-right: 1px solid rgba(255,255,255,0.05);
  }
  :global(.fwm-card__right) { flex: 1; min-width: 0; display: flex; flex-direction: column; }

  /* Island minimap */
  :global(.fwm-minimap) { padding: 0; }
  :global(.fwm-minimap__svg) { width: 100%; height: auto; display: block; }
  :global(.fwm-minimap__dot) { transition: opacity 0.15s; }
  :global(.fwm-minimap__dot:hover) { opacity: 0.85; }

  /* Weather chips */
  :global(.fwm-card__weath) {
    display: flex; gap: 6px; padding: 12px 16px; align-items: center; flex-wrap: wrap;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  :global(.fwm-card__wlbl) {
    font-size: 11px; color: #475569; font-weight: 600;
    text-transform: uppercase; letter-spacing: 1px;
  }
  :global(.fwm-wc) { padding: 3px 10px; border-radius: 12px; font-size: 11px; font-weight: 600; }
  :global(.fwm-wc--sunny) { background: rgba(250,204,21,0.15); color: #facc15; border: 1px solid rgba(250,204,21,0.2); }
  :global(.fwm-wc--rain) { background: rgba(59,130,246,0.15); color: #3b82f6; border: 1px solid rgba(59,130,246,0.2); }
  :global(.fwm-wc--thunder) { background: rgba(168,85,247,0.15); color: #a855f7; border: 1px solid rgba(168,85,247,0.2); }
  :global(.fwm-wc--wind) { background: rgba(148,163,184,0.15); color: #94a3b8; border: 1px solid rgba(148,163,184,0.2); }
  :global(.fwm-wc--foggy) { background: rgba(100,116,139,0.15); color: #64748b; border: 1px solid rgba(100,116,139,0.2); }
  :global(.fwm-wc--blizzard) { background: rgba(147,197,253,0.15); color: #93c5fd; border: 1px solid rgba(147,197,253,0.2); }
  :global(.fwm-wc--snow) { background: rgba(226,232,240,0.12); color: #e2e8f0; border: 1px solid rgba(226,232,240,0.2); }
  :global(.fwm-wc--any) { background: rgba(250,204,21,0.1); color: #fbbf24; border: 1px solid rgba(250,204,21,0.15); }

  /* Rarity filter pills */
  :global(.fwm-card__rpills) { display: flex; gap: 4px; padding: 8px 16px 12px; flex-wrap: wrap; }
  :global(.fwm-rpill) {
    padding: 4px 10px; border-radius: 6px; font-size: 11px; font-weight: 600;
    background: rgba(255,255,255,0.04); border: 1px solid rgba(255,255,255,0.06);
    color: #64748b; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-rpill:hover) { border-color: rgba(255,255,255,0.2); color: #94a3b8; }
  :global(.fwm-rpill--on) { background: rgba(34,211,238,0.1); border-color: #22d3ee; color: #22d3ee; }

  /* Fish card grid */
  :global(.fwm-fgrid) {
    padding: 12px 16px 16px;
    display: grid; grid-template-columns: repeat(3, 1fr);
    gap: 8px; max-height: 500px; overflow-y: auto;
  }
  :global(.fwm-card__empty) { text-align: center; padding: 2rem 1rem; color: #64748b; font-size: 14px; grid-column: 1 / -1; }

  :global(.fwm-fc) {
    display: flex; flex-direction: column; border-radius: 10px; overflow: hidden;
    text-decoration: none; color: inherit;
    border: 1px solid rgba(255,255,255,0.06);
    transition: border-color 0.2s, transform 0.15s;
  }
  :global(.fwm-fc:hover) { border-color: rgba(34,211,238,0.3); transform: translateY(-2px); }
  :global(.fwm-fc__imgwrap) {
    aspect-ratio: 1; display: flex; align-items: center; justify-content: center;
    overflow: hidden; position: relative;
  }
  :global(.fwm-fc__img) {
    width: 80%; height: 80%; object-fit: contain;
    filter: drop-shadow(0 2px 6px rgba(0,0,0,0.5));
    transition: transform 0.2s;
  }
  :global(.fwm-fc:hover .fwm-fc__img) { transform: scale(1.08); }
  :global(.fwm-fc__body) {
    padding: 6px 8px; display: flex; flex-direction: column; gap: 3px;
    background: rgba(0,0,0,0.3);
  }
  :global(.fwm-fc__name) {
    font-size: 11px; font-weight: 600; color: #e2e8f0;
    overflow: hidden; text-overflow: ellipsis; white-space: nowrap;
  }
  :global(.fwm-fc__rar) {
    font-size: 9px; font-weight: 700; text-transform: uppercase;
    letter-spacing: 0.5px; align-self: flex-start;
    padding: 1px 6px; border-radius: 4px;
    border: 1px solid currentColor; background: rgba(0,0,0,0.2);
  }

  :global(.fwm-card__viewall) {
    display: block; text-align: center; padding: 12px; color: #22d3ee;
    font-size: 13px; font-weight: 600; text-decoration: none;
    border-top: 1px solid rgba(255,255,255,0.05); transition: background 0.2s;
  }
  :global(.fwm-card__viewall:hover) { background: rgba(34,211,238,0.05); }

  /* Badges */
  :global(.fwm-badge) { font-size: 10px; font-weight: 600; padding: 1px 6px; border-radius: 4px; }
  :global(.fwm-badge--p) { background: rgba(249,115,22,0.15); color: #F97316; border: 1px solid rgba(249,115,22,0.3); }
  :global(.fwm-badge--e) { background: rgba(168,85,247,0.15); color: #a855f7; border: 1px solid rgba(168,85,247,0.3); }
  :global(.fwm-badge--s) { background: rgba(34,211,238,0.15); color: #22D3EE; border: 1px solid rgba(34,211,238,0.3); }
  :global(.fwm-badge--lim) { background: rgba(239,68,68,0.15); color: #ef4444; border: 1px solid rgba(239,68,68,0.2); }

  /* Event cards */
  :global(.fwm-events) { margin-top: 24px; }
  :global(.fwm-events__title) {
    font-size: 13px; font-weight: 700; color: #64748b;
    letter-spacing: 2px; text-transform: uppercase; margin-bottom: 10px;
  }
  :global(.fwm-events__row) { display: flex; gap: 8px; flex-wrap: wrap; }
  :global(.fwm-evt) {
    display: flex; align-items: center; gap: 8px; padding: 8px 14px;
    background: rgba(234,179,8,0.06); border: 1px solid rgba(234,179,8,0.15);
    border-radius: 10px; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-evt:hover) { background: rgba(234,179,8,0.1); border-color: rgba(234,179,8,0.3); }
  :global(.fwm-evt--on) { background: rgba(234,179,8,0.12); border-color: rgba(234,179,8,0.4); }
  :global(.fwm-evt__icon) { font-size: 16px; }
  :global(.fwm-evt__name) { font-size: 12px; font-weight: 600; color: #fbbf24; }
  :global(.fwm-evt__badge) {
    font-size: 9px; font-weight: 700; padding: 1px 6px; border-radius: 4px;
    background: rgba(239,68,68,0.15); color: #ef4444; border: 1px solid rgba(239,68,68,0.2);
  }
  :global(.fwm-evt__fish) { font-size: 11px; color: #64748b; }

  /* ---- Mobile ---- */
  @media (max-width: 768px) {
    :global(.fwm-ocean) { aspect-ratio: 4 / 3; }
    :global(.fwm-isle__circle) { width: 44px !important; height: 44px !important; }
    :global(.fwm-isle--large .fwm-isle__circle) { width: 54px !important; height: 54px !important; }
    :global(.fwm-isle__name) { font-size: 8px; max-width: 60px; }
    :global(.fwm-isle__badge) { font-size: 7px; padding: 0 4px; }
    :global(.fwm-controls) { flex-direction: column; }
    :global(.fwm-search) { width: 100%; }

    /* Panel stacks vertically */
    :global(.fwm-card__head) { flex-wrap: wrap; padding: 16px; gap: 12px; }
    :global(.fwm-card__content) { flex-direction: column; }
    :global(.fwm-card__left) {
      width: 100%; border-right: none;
      border-bottom: 1px solid rgba(255,255,255,0.05);
    }
    :global(.fwm-minimap__svg) { max-height: 200px; }
    /* Minimap dots min 44px touch target */
    :global(.fwm-minimap__dot circle) { min-width: 44px; min-height: 44px; }

    :global(.fwm-card__weath) { padding: 10px 16px; }
    :global(.fwm-card__rpills) { padding: 6px 16px 10px; }

    /* Fish cards: 2 columns on mobile */
    :global(.fwm-fgrid) {
      grid-template-columns: repeat(2, 1fr);
      padding: 10px 12px 14px; gap: 6px; max-height: 400px;
    }
    :global(.fwm-fc__name) { font-size: 10px; }
    :global(.fwm-fc__rar) { font-size: 8px; }

    :global(.fwm-events__row) { overflow-x: auto; flex-wrap: nowrap; scrollbar-width: none; }
    :global(.fwm-events__row::-webkit-scrollbar) { display: none; }
    :global(.fwm-evt) { flex-shrink: 0; }
  }
</style>
