---
import GameLayout from '../../../../layouts/GameLayout.astro';
import FischWorldMap from '../../../../components/FischWorldMap.tsx';
import locationsData from '../../../../data/games/fisch/locations.json';

const mapLocations = (locationsData as any[]).map(loc => ({
  id: loc.id,
  name: loc.name,
  fishCount: loc.fishCount || 0,
  isPremium: loc.isPremium || false,
  isEvent: loc.isEvent || false,
  isSeasonal: loc.isSeasonal || false,
  coords: loc.coords || null,
  imagePath: loc.imagePath || null,
  fish: (loc.fish || []).map((f: any) => ({
    name: f.name,
    rarity: f.rarity,
    id: f.name.toLowerCase().replace(/['']/g, '').replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, ''),
  })),
  availableWeathers: loc.availableWeathers || [],
}));

const totalLocations = mapLocations.length;
const totalFish = mapLocations.reduce((sum: number, l: any) => sum + l.fishCount, 0);
const description = `Interactive map of all ${totalLocations} Fisch fishing locations grouped into 20 regions. Click any island to explore fish, weather, and sub-locations.`;
---

<GameLayout
  title="Interactive Map - All Fishing Locations | Fisch Roblox"
  description={description}
  game="Fisch"
  breadcrumbs={[{ label: 'Map', href: '/games/fisch/map/' }]}
>
  <div class="map-page">
    <div class="map-hero">
      <h1 class="map-hero__title">üó∫Ô∏è <span class="map-hero__accent">INTERACTIVE</span> MAP</h1>
      <p class="map-hero__sub">20 regions &bull; {totalFish.toLocaleString('en-US')} fish &bull; Click any island to explore</p>
    </div>
    <FischWorldMap client:load locations={mapLocations} gameSlug="fisch"/>
  </div>
</GameLayout>

<style>
  .map-page { display: flex; flex-direction: column; }
  .map-hero { text-align: center; padding: 24px 20px 12px; }
  .map-hero__title { font-size: 24px; font-weight: 800; letter-spacing: 2px; color: #fff; margin: 0; }
  .map-hero__accent { color: #22d3ee; }
  .map-hero__sub { color: #64748b; font-size: 13px; margin-top: 4px; }

  @media (max-width: 767px) {
    .map-hero { padding: 16px 16px 8px; }
    .map-hero__title { font-size: 20px; }
    .map-hero__sub { font-size: 12px; }
  }

  /* ================================================
     ROOT
     ================================================ */
  :global(.fwm) { max-width: 1100px; margin: 0 auto; padding: 0 16px 40px; }

  /* ===== CONTROLS ===== */
  :global(.fwm-controls) {
    display: flex; gap: 8px; align-items: center; flex-wrap: wrap; margin-bottom: 12px;
  }
  :global(.fwm-search) {
    flex: 1; min-width: 180px;
    background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08);
    border-radius: 10px; padding: 9px 14px;
    color: #e2e8f0; font-size: 13px; font-family: inherit; outline: none;
    transition: border-color 0.2s;
  }
  :global(.fwm-search:focus) { border-color: #22d3ee; }
  :global(.fwm-search::placeholder) { color: #475569; }
  :global(.fwm-pills) { display: flex; gap: 6px; }
  :global(.fwm-pill) {
    padding: 6px 14px; border-radius: 20px; font-size: 12px; font-weight: 600;
    border: 1px solid rgba(255,255,255,0.1); background: transparent;
    color: #94a3b8; cursor: pointer; transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-pill:hover) { border-color: #22d3ee; color: #22d3ee; }
  :global(.fwm-pill--on) { background: #22d3ee; color: #080e1a; border-color: #22d3ee; }

  /* ===== BREADCRUMB ===== */
  :global(.fwm-bread) {
    display: flex; align-items: center; gap: 6px;
    font-size: 12px; min-height: 24px; margin-bottom: 8px;
  }
  :global(.fwm-bread__link) {
    color: #22d3ee; cursor: pointer; font-weight: 600; text-decoration: none;
  }
  :global(.fwm-bread__link:hover) { text-decoration: underline; }
  :global(.fwm-bread__sep) { color: #475569; }
  :global(.fwm-bread__cur) { color: #e2e8f0; font-weight: 600; }

  /* ===== MAP FRAME ===== */
  :global(.fwm-frame) {
    position: relative; width: 100%; aspect-ratio: 16 / 9;
    border-radius: 16px; border: 1px solid rgba(34,211,238,0.1);
    overflow: hidden; transition: all 0.5s ease;
  }

  /* ===== BACK BUTTON (inside map) ===== */
  :global(.fwm-backbtn) {
    position: absolute; top: 12px; left: 12px; z-index: 20;
    display: inline-flex; align-items: center; gap: 4px;
    padding: 8px 14px; border-radius: 10px;
    background: rgba(0,0,0,0.6); backdrop-filter: blur(8px);
    border: 1px solid rgba(255,255,255,0.1);
    color: #22d3ee; font-size: 13px; font-weight: 700;
    cursor: pointer; font-family: inherit; transition: all 0.2s;
    min-height: 40px;
  }
  :global(.fwm-backbtn:hover) { background: rgba(0,0,0,0.75); border-color: #22d3ee; }
  :global(.fwm-backbtn svg) { flex-shrink: 0; }

  /* ===== LEVEL 1: WORLD MAP ===== */
  :global(.fwm-world) {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, #0a1e3d 0%, #0c2748 30%, #0a1f3a 60%, #081628 100%);
    transition: opacity 0.4s, transform 0.4s;
  }
  :global(.fwm-world--hidden) {
    opacity: 0; pointer-events: none; transform: scale(1.1);
  }
  :global(.fwm-world::before) {
    content: ''; position: absolute; inset: 0; pointer-events: none;
    background:
      radial-gradient(ellipse 80% 50% at 30% 40%, rgba(34,211,238,0.03) 0%, transparent 70%),
      radial-gradient(ellipse 60% 40% at 70% 60%, rgba(99,102,241,0.03) 0%, transparent 70%);
  }

  :global(.fwm-gridlines) {
    position: absolute; inset: 0; opacity: 0.03; pointer-events: none;
    background-image:
      linear-gradient(rgba(255,255,255,0.5) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.5) 1px, transparent 1px);
    background-size: 80px 80px;
  }

  :global(.fwm-rlbl) {
    position: absolute; font-size: 11px; font-weight: 700;
    letter-spacing: 4px; text-transform: uppercase; pointer-events: none; opacity: 0.1;
  }
  :global(.fwm-rlbl--first) { top: 8%; left: 50%; transform: translateX(-50%); color: #22d3ee; }
  :global(.fwm-rlbl--second) { bottom: 12%; left: 50%; transform: translateX(-50%); color: #a78bfa; }

  :global(.fwm-compass) {
    position: absolute; top: 12px; right: 12px; width: 40px; height: 40px;
    border-radius: 50%; border: 1px solid rgba(255,255,255,0.06);
    background: rgba(0,0,0,0.25); pointer-events: none; z-index: 5;
  }
  :global(.fwm-compass::before) {
    content: 'N'; position: absolute; top: 4px; left: 50%; transform: translateX(-50%);
    color: #ef4444; font-size: 9px; font-weight: 700;
  }
  :global(.fwm-compass::after) {
    content: ''; width: 1px; height: 18px; position: absolute;
    top: 50%; left: 50%; transform: translate(-50%, -50%);
    background: linear-gradient(#ef4444, rgba(255,255,255,0.15));
  }

  /* ===== ISLAND NODES ===== */
  :global(.fwm-isle) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; transition: transform 0.2s, opacity 0.2s; z-index: 2;
    transform: translate(-50%, -50%);
  }
  :global(.fwm-isle:hover) { transform: translate(-50%, -50%) scale(1.15); z-index: 10; }

  /* Pulse ring on hover */
  :global(.fwm-isle::after) {
    content: ''; position: absolute; top: 0; left: 50%;
    transform: translateX(-50%); border-radius: 50%;
    border: 1px solid rgba(34,211,238,0.2);
    animation: fwm-soft-pulse 3s ease-in-out infinite;
    pointer-events: none; opacity: 0; z-index: -1;
  }
  :global(.fwm-isle:hover::after) { opacity: 1; }

  :global(.fwm-isle__wrap) {
    border-radius: 50%; overflow: hidden;
    border: 2px solid rgba(255,255,255,0.12);
    box-shadow: 0 0 15px rgba(0,0,0,0.6);
    transition: all 0.25s;
    display: flex; align-items: center; justify-content: center;
  }
  :global(.fwm-isle:hover .fwm-isle__wrap) {
    border-color: #22d3ee; box-shadow: 0 0 22px rgba(34,211,238,0.35);
  }

  /* Island sizes */
  :global(.fwm-isle--xl .fwm-isle__wrap) { width: 72px; height: 72px; }
  :global(.fwm-isle--xl::after) { width: 72px; height: 72px; }
  :global(.fwm-isle--lg .fwm-isle__wrap) { width: 60px; height: 60px; }
  :global(.fwm-isle--lg::after) { width: 60px; height: 60px; }
  :global(.fwm-isle--md .fwm-isle__wrap) { width: 50px; height: 50px; }
  :global(.fwm-isle--md::after) { width: 50px; height: 50px; }
  :global(.fwm-isle--sm .fwm-isle__wrap) { width: 40px; height: 40px; }
  :global(.fwm-isle--sm::after) { width: 40px; height: 40px; }

  :global(.fwm-isle__img) { width: 100%; height: 100%; object-fit: cover; border-radius: 50%; }
  :global(.fwm-isle__ph) {
    width: 100%; height: 100%; border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
  }
  :global(.fwm-isle__emoji) { font-size: 22px; }

  :global(.fwm-isle__lbl) {
    margin-top: 3px; font-size: 9px; font-weight: 600;
    color: rgba(255,255,255,0.7); text-shadow: 0 1px 3px rgba(0,0,0,0.9);
    white-space: nowrap; text-align: center; transition: color 0.2s;
  }
  :global(.fwm-isle:hover .fwm-isle__lbl) { color: #22d3ee; }

  :global(.fwm-isle__badge) {
    font-size: 8px; font-weight: 700; color: #22d3ee;
    background: rgba(34,211,238,0.12); padding: 1px 5px; border-radius: 6px; margin-top: 1px;
  }

  /* Biome placeholder colors */
  :global(.fwm-biome--tropical) { background: linear-gradient(135deg, #065f46, #059669); }
  :global(.fwm-biome--volcanic) { background: linear-gradient(135deg, #7f1d1d, #dc2626); }
  :global(.fwm-biome--snow) { background: linear-gradient(135deg, #cbd5e1, #94a3b8); }
  :global(.fwm-biome--swamp) { background: linear-gradient(135deg, #365314, #4d7c0f); }
  :global(.fwm-biome--dark) { background: linear-gradient(135deg, #1e1b4b, #4338ca); }
  :global(.fwm-biome--sand) { background: linear-gradient(135deg, #92400e, #d97706); }
  :global(.fwm-biome--ocean) { background: linear-gradient(135deg, #0c4a6e, #0284c7); }
  :global(.fwm-biome--mystic) { background: linear-gradient(135deg, #581c87, #9333ea); }

  @keyframes fwm-soft-pulse {
    0%, 100% { transform: translateX(-50%) scale(1); opacity: 0; }
    50% { transform: translateX(-50%) scale(1.4); opacity: 0.5; }
  }

  /* ===== LEVEL 2+3: ISLAND DETAIL ===== */
  :global(.fwm-detail) {
    position: absolute; inset: 0; display: flex;
    transition: opacity 0.4s, transform 0.4s;
    opacity: 0; pointer-events: none; transform: scale(0.95);
  }
  :global(.fwm-detail--on) { opacity: 1; pointer-events: all; transform: scale(1); }

  /* ===== MINIMAP (left side) ===== */
  :global(.fwm-mmap) {
    flex: 1; position: relative; overflow: visible; cursor: default;
  }
  :global(.fwm-mmap__bg) { position: absolute; inset: 0; }

  :global(.fwm-sil) {
    position: absolute; top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 70%; max-width: 400px;
    filter: drop-shadow(0 0 30px rgba(34,211,238,0.1));
    pointer-events: none;
  }

  /* ===== SUB-LOCATION DOTS ===== */
  :global(.fwm-sdot) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; transition: transform 0.2s; z-index: 3;
    transform: translate(-50%, -50%);
  }
  :global(.fwm-sdot:hover) { transform: translate(-50%, -50%) scale(1.2); }
  :global(.fwm-sdot--on) { z-index: 5; }

  :global(.fwm-sdot__ring) {
    position: absolute; width: 28px; height: 28px; border-radius: 50%;
    background: rgba(34,211,238,0.08); top: 50%; left: 50%;
    transform: translate(-50%, -50%); pointer-events: none;
    transition: all 0.25s;
  }
  :global(.fwm-sdot--on .fwm-sdot__ring) {
    width: 36px; height: 36px; background: rgba(34,211,238,0.15);
    box-shadow: 0 0 20px rgba(34,211,238,0.3);
  }

  :global(.fwm-sdot__dot) {
    width: 16px; height: 16px; border-radius: 50%;
    background: #22d3ee; border: 2px solid rgba(255,255,255,0.3);
    box-shadow: 0 0 10px rgba(34,211,238,0.4); transition: all 0.25s;
    position: relative; z-index: 1;
  }
  :global(.fwm-sdot:hover .fwm-sdot__dot),
  :global(.fwm-sdot--on .fwm-sdot__dot) {
    width: 20px; height: 20px; background: #06b6d4;
    box-shadow: 0 0 18px rgba(34,211,238,0.6);
  }

  :global(.fwm-sdot__name) {
    margin-top: 3px; font-size: 9px; font-weight: 600;
    color: rgba(255,255,255,0.7); text-shadow: 0 1px 4px rgba(0,0,0,0.9);
    white-space: nowrap; position: relative; z-index: 1;
  }
  :global(.fwm-sdot--on .fwm-sdot__name) { color: #22d3ee; }

  /* ===== FISH ORBIT (Level 3) ===== */
  :global(.fwm-orbit) {
    position: absolute; z-index: 4;
    transform: translate(-50%, -50%);
  }

  :global(.fwm-orbf) {
    position: absolute; display: flex; flex-direction: column; align-items: center;
    cursor: pointer; transition: transform 0.2s;
    animation: fwm-fish-in 0.3s ease backwards;
    text-decoration: none; color: inherit;
  }
  :global(.fwm-orbf:hover) { transform: scale(1.15); z-index: 10; }

  :global(.fwm-orbf__img) {
    width: 52px; height: 52px; border-radius: 10px; overflow: hidden;
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 2px 12px rgba(0,0,0,0.5);
    display: flex; align-items: center; justify-content: center;
    transition: all 0.2s;
  }
  :global(.fwm-orbf:hover .fwm-orbf__img) {
    border-color: #22d3ee; box-shadow: 0 0 16px rgba(34,211,238,0.3);
  }
  :global(.fwm-orbf__img img) {
    width: 80%; height: 80%; object-fit: contain;
    filter: drop-shadow(0 1px 3px rgba(0,0,0,0.5));
  }

  :global(.fwm-orbf__name) {
    margin-top: 2px; font-size: 8px; font-weight: 600;
    color: rgba(255,255,255,0.8); text-shadow: 0 1px 3px rgba(0,0,0,0.9);
    white-space: nowrap; max-width: 70px; overflow: hidden;
    text-overflow: ellipsis; text-align: center;
  }
  :global(.fwm-orbf__rar) {
    font-size: 7px; font-weight: 700; padding: 0px 4px;
    border-radius: 3px; margin-top: 1px; text-transform: uppercase;
  }

  :global(.fwm-orbmore) {
    position: absolute; left: 50%; bottom: -50px;
    transform: translateX(-50%);
    padding: 4px 12px; border-radius: 12px;
    background: rgba(34,211,238,0.15); border: 1px solid rgba(34,211,238,0.3);
    color: #22d3ee; font-size: 11px; font-weight: 700;
    cursor: pointer; font-family: inherit; white-space: nowrap;
    transition: all 0.2s;
  }
  :global(.fwm-orbmore:hover) { background: rgba(34,211,238,0.25); }

  @keyframes fwm-fish-in {
    from { opacity: 0; transform: scale(0.5); }
    to { opacity: 1; transform: scale(1); }
  }

  /* ===== INFO PANEL (right side) ===== */
  :global(.fwm-ipanel) {
    width: 280px; flex-shrink: 0;
    background: rgba(8,14,26,0.92); backdrop-filter: blur(12px);
    border-left: 1px solid rgba(255,255,255,0.06);
    display: flex; flex-direction: column; overflow-y: auto;
  }

  :global(.fwm-ipanel__head) {
    padding: 16px; border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  :global(.fwm-ipanel__back) {
    display: inline-flex; align-items: center; gap: 4px;
    font-size: 11px; color: #22d3ee; cursor: pointer;
    margin-bottom: 8px; font-weight: 600;
    background: none; border: none; font-family: inherit; padding: 0;
  }
  :global(.fwm-ipanel__back:hover) { text-decoration: underline; }
  :global(.fwm-ipanel__title) { font-size: 18px; font-weight: 700; color: #fff; }
  :global(.fwm-ipanel__meta) {
    display: flex; gap: 8px; margin-top: 4px; font-size: 11px; color: #64748b; flex-wrap: wrap;
  }
  :global(.fwm-ipanel__count) { color: #22d3ee; font-weight: 600; }
  :global(.fwm-ipanel__coords) { font-family: monospace; font-size: 10px; }

  /* Weather */
  :global(.fwm-ipanel__wx) {
    padding: 10px 16px; display: flex; gap: 4px; flex-wrap: wrap;
    border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  :global(.fwm-wxc) { padding: 2px 8px; border-radius: 10px; font-size: 10px; font-weight: 600; }
  :global(.fwm-wx--sun) { background: rgba(250,204,21,0.12); color: #facc15; }
  :global(.fwm-wx--rain) { background: rgba(59,130,246,0.12); color: #3b82f6; }
  :global(.fwm-wx--thun) { background: rgba(168,85,247,0.12); color: #a855f7; }
  :global(.fwm-wx--wind) { background: rgba(148,163,184,0.12); color: #94a3b8; }
  :global(.fwm-wx--fog) { background: rgba(100,116,139,0.12); color: #64748b; }
  :global(.fwm-wx--bliz) { background: rgba(147,197,253,0.12); color: #93c5fd; }
  :global(.fwm-wx--snow) { background: rgba(226,232,240,0.1); color: #e2e8f0; }
  :global(.fwm-wx--any) { background: rgba(250,204,21,0.08); color: #fbbf24; }

  /* Sub-zone list */
  :global(.fwm-ipanel__subs) {
    padding: 10px 16px; border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  :global(.fwm-ipanel__slbl) {
    font-size: 9px; font-weight: 700; color: #475569;
    text-transform: uppercase; letter-spacing: 1px; margin-bottom: 6px;
  }
  :global(.fwm-ipanel__sub) {
    display: flex; align-items: center; gap: 8px;
    padding: 6px 8px; border-radius: 6px; cursor: pointer;
    transition: background 0.15s; font-size: 12px; color: #cbd5e1; font-weight: 500;
  }
  :global(.fwm-ipanel__sub:hover) { background: rgba(255,255,255,0.04); }
  :global(.fwm-ipanel__sub--on) { background: rgba(34,211,238,0.1); color: #22d3ee; }
  :global(.fwm-ipanel__sdot) {
    width: 8px; height: 8px; border-radius: 50%; background: #22d3ee; flex-shrink: 0;
  }
  :global(.fwm-ipanel__scnt) { margin-left: auto; font-size: 10px; color: #475569; }

  /* Fish list */
  :global(.fwm-ipanel__flist) { padding: 8px 16px 16px; flex: 1; overflow-y: auto; }
  :global(.fwm-ipanel__flbl) {
    font-size: 9px; font-weight: 700; color: #475569;
    text-transform: uppercase; letter-spacing: 1px; margin-bottom: 6px;
  }
  :global(.fwm-ipanel__empty) { text-align: center; padding: 1rem; color: #475569; font-size: 12px; }

  :global(.fwm-ipanel__fi) {
    display: flex; align-items: center; gap: 8px;
    padding: 5px 6px; border-radius: 6px; cursor: pointer;
    transition: background 0.15s; text-decoration: none; color: inherit;
  }
  :global(.fwm-ipanel__fi:hover) { background: rgba(255,255,255,0.04); }

  :global(.fwm-ipanel__fimg) {
    width: 32px; height: 32px; border-radius: 6px; overflow: hidden; flex-shrink: 0;
    display: flex; align-items: center; justify-content: center;
    border: 1px solid rgba(255,255,255,0.08);
  }
  :global(.fwm-ipanel__fimg img) {
    width: 80%; height: 80%; object-fit: contain;
    filter: drop-shadow(0 1px 2px rgba(0,0,0,0.4));
  }
  :global(.fwm-ipanel__fname) { flex: 1; font-size: 12px; font-weight: 500; color: #cbd5e1; }
  :global(.fwm-ipanel__frar) {
    font-size: 9px; font-weight: 700; padding: 1px 5px; border-radius: 4px;
    text-transform: uppercase; flex-shrink: 0;
  }

  /* ===== EVENTS ===== */
  :global(.fwm-events) { margin-top: 24px; }
  :global(.fwm-events__lbl) {
    font-size: 11px; font-weight: 700; color: #64748b;
    letter-spacing: 2px; text-transform: uppercase; margin-bottom: 8px;
  }
  :global(.fwm-events__scroll) {
    display: flex; gap: 8px; overflow-x: auto; padding-bottom: 4px;
    scrollbar-width: none;
  }
  :global(.fwm-events__scroll::-webkit-scrollbar) { display: none; }

  :global(.fwm-evtc) {
    display: flex; align-items: center; gap: 6px;
    padding: 6px 12px; background: rgba(234,179,8,0.06);
    border: 1px solid rgba(234,179,8,0.12); border-radius: 8px;
    cursor: pointer; white-space: nowrap; flex-shrink: 0;
    transition: all 0.2s; font-family: inherit;
  }
  :global(.fwm-evtc:hover) { background: rgba(234,179,8,0.1); border-color: rgba(234,179,8,0.25); }
  :global(.fwm-evtc__icon) { font-size: 14px; }
  :global(.fwm-evtc__name) { font-size: 11px; font-weight: 600; color: #fbbf24; }
  :global(.fwm-evtc__status) {
    font-size: 8px; font-weight: 700; padding: 1px 5px; border-radius: 3px;
    background: rgba(239,68,68,0.12); color: #ef4444;
  }
  :global(.fwm-evtc__fish) { font-size: 10px; color: #64748b; }

  /* ===== MOBILE ===== */
  @media (max-width: 768px) {
    :global(.fwm-frame) { aspect-ratio: 3 / 4; }
    :global(.fwm-controls) { flex-direction: column; }
    :global(.fwm-search) { width: 100%; }

