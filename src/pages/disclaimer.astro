<style>
  .main {
    padding: 2rem 0 3rem;
  }

  .page-wrap {
    width: 100%;
    max-width: 760px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .page-title {
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .content {
    color: var(--text-dim);
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .content p {
    margin-bottom: 1.25rem;
  }

  .content h2 {
    font-family: var(--font-display);
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content strong {
    color: var(--accent);
  }
</style>
